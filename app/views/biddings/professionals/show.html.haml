#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-12
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-eye
        Profesional: 
        %strong
          = @professional.name
  %section#widget-grid
    .row
      %article.col-sm-12.col-md-12.col-lg-12
        #wid-id-0.jarviswidget.jarviswidget-color-darken{"data-widget-collapsed" => "false", "data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
          %header
            %span.widget-icon
              %i.fa.fa-table
            %h2 
              = 'Información correspondiente a '+ @professional.name+ ':'
          %div
            .jarviswidget-editbox
              / This area used as dropdown edit box
            .widget-body.no-padding
              .alert.alert-info.no-margin.fade.in
                %button.close{"data-dismiss" => "alert"}
                  ×
                %i.fa-fw.fa.fa-info
                Datos Generales
              %table.table.table-hover
                %thead
                  %tr
                    %th DNI
                    %th Profesiones
                    %th Fecha de Titulación
                    %th Fecha de Colegiatura
                    %th Código de Colegiatura
                %tbody
                  %tr
                    %td
                      = @professional.dni
                    %td
                      -pro.majors.each do |major|
	                      = major.name
                      %br
                    %td
                      = @professional.professional_title_date
                    %td
                      = @professional.date_of_tuition
                    %td
                      = @professional.code_tuition

    .row
      %article.col-sm-12.col-md-12.col-lg-12
        #wid-id-0.jarviswidget.jarviswidget-color-darken{"data-widget-collapsed" => "false", "data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
          %header
            %span.widget-icon
              %i.fa.fa-table
            %h2 
              = 'Certificados correspondiente a '+ @professional.name+ ':'
          %div
            .jarviswidget-editbox
              / This area used as dropdown edit box
            .widget-body.no-padding
              .alert.alert-info.no-margin.fade.in
                %button.close{"data-dismiss" => "alert"}
                  ×
                %i.fa-fw.fa.fa-info
                Certificado
              %table.table.table-hover
                %thead
                  %tr
                    %th Obra
                    %th Cargo
                    %th Entidad
                    %th Fecha de Inicio
                    %th Fecha de Termino
                %tbody
                  -@professional.certificates.each do |procert|
	                  %tr
	                    %td
	                      - @work.each do |wo|
	                        - if procert.work_id == wo.id
	                          = wo.name
	                    %td
	                      - @charge.each do |ch|
	                        -if procert.charge_id == ch.id
	                          = ch.name
	                    %td
	                      - @entity.each do |en|
	                        - if procert.entity_id == en.id
	                          = en.name
	                    %td
	                      = procert.start_date
	                    %td
	                      = procert.finish_date
	  .row
      %article.col-sm-12.col-md-12.col-lg-12
        #wid-id-0.jarviswidget.jarviswidget-color-darken{"data-widget-collapsed" => "false", "data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
          %header
            %span.widget-icon
              %i.fa.fa-table
            %h2 
              = 'Capacitaciones correspondiente a '+ @professional.name+ ':'
          %div
            .jarviswidget-editbox
              / This area used as dropdown edit box
            .widget-body.no-padding
              .alert.alert-info.no-margin.fade.in
                %button.close{"data-dismiss" => "alert"}
                  ×
                %i.fa-fw.fa.fa-info
                Capacitación
              %table.table.table-hover
                %thead
                  %tr
                    %th Tipo de Capacitación
                    %th Nombre de Capacitación
                    %th Cantidad de Horas
                    %th Fecha de Inicio
                    %th Fecha de Termino
                %tbody
                  -@professional.trainings.each do |proctra|
	                  %tr
	                    %td
                        = proctra.type_training
	                    %td
	                      = proctra.name_training
	                    %td
                        = proctra.num_hours
	                    %td
	                      = procert.start_training
	                    %td
	                      = procert.finish_training