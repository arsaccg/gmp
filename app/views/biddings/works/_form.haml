#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Obras
  %div{:style => "padding-top: 0"}
    .jarviswidget-editbox
    .widget-body
      = simple_form_for([:biddings, @work], html: {multipart: true, class: 'form-horizontal', autocomplete: 'off' }) do |f|
        = hidden_field_tag "company_id", @company
        .col-sm-12
          %fieldset
            %legend Datos Generales
            .row
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Especialidad
                  .col-md-8
                    .input-group
                      %select.form-control#specialty-select{:name =>"work[specialty]"}
                        -if @action=="edit"
                          -if @work.specialty=="Saneamiento"
                            %option{:value => "Saneamiento", :selected => true} Saneamiento
                            %option{:value => "Civil"} Civil
                            %option{:value => "Electromecanico"} Electromecanico
                            %option{:value => "Hidraulica"} Hidráulica
                          -elsif @work.specialty=="Civil"
                            %option{:value => "Saneamiento"} Saneamiento
                            %option{:value => "Civil", :selected => true} Civil
                            %option{:value => "Electromecanico"} Electromecanico
                            %option{:value => "Hidraulica"} Hidráulica
                          -elsif @work.specialty=="Electromecanico"
                            %option{:value => "Saneamiento"} Saneamiento
                            %option{:value => "Civil"} Civil
                            %option{:value => "Electromecanico", :selected => true} Electromecanico
                            %option{:value => "Hidraulica"} Hidráulica
                          -elsif @work.specialty=="Hidraulica"
                            %option{:value => "Saneamiento"} Saneamiento
                            %option{:value => "Civil"} Civil
                            %option{:value => "Electromecanico"} Electromecanico
                            %option{:value => "Hidraulica", :selected => true} Hidráulica
                        -else
                          %option{:value => "Saneamiento"} Saneamiento
                          %option{:value => "Civil"} Civil
                          %option{:value => "Electromecanico"} Electromecanico
                          %option{:value => "Hidraulica"} Hidráulica
                      %span.input-group-addon
                        %i.fa.fa-money
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Participación de ARSAC
                  .col-md-8
                    .input-group
                      = f.input :participation_of_arsac, placeholder: "Participación de ARSAC", input_html: { class: 'form-control', onkeypress: "return isNumber(event);" }, label: false
                      %span.input-group-addon
                        %i.fa.fa-flag
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Miembros Consorcio
                  .col-md-8
                    .input-group
                      = f.association :work_partners, :as => :collection_select, :label => false, :input_html =>{:class => "select2", :multiple => true}
                      %span.input-group-addon
                        %i.fa.fa-calendar
            .row
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Entidad contratante
                  .col-md-8
                    .input-group
                      %select.form-control#category-select{:name =>"work[entity_id]"}
                        - @entities.each do |entities|
                          - entities.each do |entity|
                            - if @work.entity_id == entity.id
                              %option{:value => "#{entity.id}", :selected => true}
                                = entity.name + ' ' + entity.paternal_surname
                            - else
                              %option{:value => "#{entity.id}"}
                                = entity.name + ' ' + entity.paternal_surname
                      %span.input-group-addon
                        %i.fa.fa-gears
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Fecha de Firma de Contrato
                  .col-md-8
                    .input-group
                      = f.input :date_signature_of_contract, as: :string, :input_html => {:class => 'form-control', :type => "date"}, label: false
                      %span.input-group-addon
                        %i.fa.fa-calendar
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Número de Licitación
                  .col-md-8
                    .input-group
                      = f.input :number_of_settlement, placeholder: "Numero de Licitación", input_html: { class: 'form-control' }, label: false
                      %span.input-group-addon
                        %i.fa.fa-warning
            .row
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Nombre de la Obra
                  .col-md-8
                    .input-group
                      = f.input :name, placeholder: "Nombre de la Obra", input_html: { class: 'form-control' }, label: false
                      %span.input-group-addon
                        %i.fa.fa-warning
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Fecha de Inicio de Obra
                  .col-md-8
                    .input-group
                      = f.input :start_date_of_work, as: :string, :input_html => {:class => 'form-control', :type => "date"}, label: false
                      %span.input-group-addon
                        %i.fa.fa-calendar
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Sistema de Contratación
                  .col-md-8
                    .input-group
                      %select.form-control#syscontract-select{:name =>"work[procurement_system]"}
                        -if @action=="edit"
                          -if @work.procurement_system=="unit_price"
                            %option{:value => "unit_price", :selected => true} Precios Unitarios
                            %option{:value => "advance_sum"} Suma Alzada
                            %option{:value => "mixto"} Mixto
                          -elsif @work.procurement_system=="advance_sum"
                            %option{:value => "unit_price"} Precio Unitario
                            %option{:value => "advance_sum", :selected => true} Suma Alzada
                            %option{:value => "mixto"} Mixto
                          -elsif @work.procurement_system=="mixto"
                            %option{:value => "unit_price"} Precio Unitario
                            %option{:value => "advance_sum"} Suma Alzada
                            %option{:value => "mixto", :selected => true} Mixto
                        -else
                          %option{:value => "unit_price"} Precio Unitario
                          %option{:value => "advance_sum"} Suma Alzada
                          %option{:value => "mixto"} Mixto
                      %span.input-group-addon
                        %i.fa.fa-calendar
              
            .row
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Monto de Contrato de Obra
                  .col-md-8
                    .input-group
                      = f.input :amount_of_contract, placeholder: "Monto de Contrato", input_html: { value: number_with_precision(f.object.amount_of_contract, precision: 2), class: 'form-control' }, label: false
                      %span.input-group-addon
                        %i.fa.fa-male
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Fecha de Fin Real de Obra
                  .col-md-8
                    .input-group
                      = f.input :real_end_date_of_work, as: :string, :input_html => {:class => 'form-control', :type => "date"}, label: false
                      %span.input-group-addon
                        %i.fa.fa-calendar
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Moneda
                  .col-md-8
                    .input-group
                      %select.form-control#money-select{:name =>"work[money_id]"}
                        - @moneys.each do |money|
                          - if @work.money_id == money.id
                            %option{:value => "#{money.id}", :selected => true}
                              = money.name
                          - else
                            %option{:value => "#{money.id}"}
                              = money.name
                      %span.input-group-addon
                        %i.fa.fa-calendar
              
            .row
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Contratista
                  .col-md-8
                    .input-group
                      %select.form-control#category-select{:name =>"work[contractor_id]"}
                        - @contractors.each do |entities|
                          - entities.each do |entity|
                            - if @work.contractor_id == entity.id
                              %option{:value => "#{entity.id}", :selected => true}
                                = entity.name + ' ' + entity.paternal_surname
                            - else
                              %option{:value => "#{entity.id}"}
                                = entity.name + ' ' + entity.paternal_surname
                      %span.input-group-addon
                        %i.fa.fa-flag
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Fecha de Recepción de Obra
                  .col-md-8
                    .input-group
                      = f.input :date_of_receipt_of_work, as: :string, :input_html => {:class => 'form-control', :type => "date"}, label: false
                      %span.input-group-addon
                        %i.fa.fa-calendar
              .col-md-4
                .form-group
                  %label.col-md-4.control-label Tipo de cambio
                  .col-md-8
                    .input-group
                      = f.input :exchange_of_rate, :input_html => {:class => 'form-control'}, label: false
                      %span.input-group-addon
                        %i.fa.fa-calendar
            .row
              .col-md-4
                .form-group
                  %label.col-md-4.control-label IPC Actual
                  .col-md-8
                    .input-group
                      = text_field(:ipc, :actual, class: "form-control", value: "#{@financial_variables.value}", readonly: true)
                      %span.input-group-addon
                        %i.fa.fa-thumb-tack
            %fieldset
              %legend Variables
              .row
                .col-md-4
                  .form-group
                    %label.col-md-4.control-label Objeto de Contrato
                    .col-md-8
                      .input-group
                        %select.form-control#purposecontract-select{:name =>"work[purpose_of_contract]"}
                          -if @action=="edit"
                            -if @work.procurement_system=="obra"
                              %option{:value => "obra", :selected => true} Obra
                              %option{:value => "expediente_obra"} Exp + Obra
                              %option{:value => "expediente_obra_is"} Exp + Obra + I.S
                              %option{:value => "llave_mano"} Llave en mano
                            -elsif @work.procurement_system=="expediente_obra"
                              %option{:value => "obra"} Obra
                              %option{:value => "expediente_obra", :selected => true} Exp + Obra
                              %option{:value => "expediente_obra_is"} Exp + Obra + I.S
                              %option{:value => "llave_mano"} Llave en mano
                            -elsif @work.procurement_system=="llave_mano"
                              %option{:value => "obra"} Obra
                              %option{:value => "expediente_obra"} Exp + Obra
                              %option{:value => "expediente_obra_is"} Exp + Obra + I.S
                              %option{:value => "llave_mano", :selected => true} Llave en mano
                            - elsif @work.procurement_system == 'expediente_obra_is'
                              %option{:value => "obra"} Obra
                              %option{:value => "expediente_obra"} Exp + Obra
                              %option{:value => "expediente_obra_is", :selected => true} Exp + Obra + I.S
                              %option{:value => "llave_mano", :selected => true} Llave en mano
                          -else
                            %option{:value => "obra"} Obra
                            %option{:value => "expediente_obra"} Exp + Obra
                            %option{:value => "expediente_obra_is"} Exp + Obra + I.S
                            %option{:value => "llave_mano"} Llave en mano
                        %span.input-group-addon
                          %i.fa.fa-calendar
                .col-md-4{:id => 'dates-exp-start', :style => 'display:none'}
                  .form-group
                    %label.col-md-4.control-label Fecha de inicio de Expediente
                    .col-md-8
                      .input-group
                        = f.input :start_date_of_inquiry, as: :string, :input_html => {:class => 'form-control', :type => "date"}, label: false
                        %span.input-group-addon
                          %i.fa.fa-calendar
                .col-md-4{:id => 'dates-exp-end', :style => 'display:none'}
                  .form-group
                    %label.col-md-4.control-label Fecha de fin de Expediente
                    .col-md-8
                      .input-group
                        = f.input :end_date_of_inquiry, as: :string, :input_html => {:class => 'form-control', :type => "date"}, label: false
                        %span.input-group-addon
                          %i.fa.fa-calendar
                .col-md-4{:id => 'amount-contract-exp', :style => 'display:none'}
                  .form-group
                    %label.col-md-4.control-label Monto de Contrato del Expediente
                    .col-md-8
                      .input-group
                        = f.input :amount_contract_of_inquiry, as: :string, :input_html => {:class => 'form-control'}, label: false
                        %span.input-group-addon
                          %i.fa.fa-calendar
                .col-md-4{:id => 'amount-settlement-exp', :style => 'display:none'}
                  .form-group
                    %label.col-md-4.control-label Monto Liquidación del Expediente
                    .col-md-8
                      .input-group
                        = f.input :amount_settlement_of_inquiry, as: :string, :input_html => {:class => 'form-control'}, label: false
                        %span.input-group-addon
                          %i.fa.fa-calendar
                .col-md-4{:id => 'amount-contract-is', :style => 'display:none'}
                  .form-group
                    %label.col-md-4.control-label Monto de Contrato del I.S
                    .col-md-8
                      .input-group
                        = f.input :amount_contract_of_is, as: :string, :input_html => {:class => 'form-control'}, label: false
                        %span.input-group-addon
                          %i.fa.fa-calendar
                .col-md-4{:id => 'amount-settlement-is', :style => 'display:none'}
                  .form-group
                    %label.col-md-4.control-label Monto de Liquidación del I.S
                    .col-md-8
                      .input-group
                        = f.input :amount_settlement_of_is, as: :string, :input_html => {:class => 'form-control'}, label: false
                        %span.input-group-addon
                          %i.fa.fa-calendar

            %fieldset
              %legend Liquidación
              .row
                .col-md-4
                  .form-group
                    %label.col-md-4.control-label Monto de Liquidación
                    .col-md-8
                      .input-group
                        = f.input :amount_of_settlement, placeholder: "Monto de Liquidación", input_html: { value: number_with_precision(f.object.amount_of_settlement, precision: 2), class: 'form-control' }, label: false
                        %span.input-group-addon
                          %i.fa.fa-flag
                .col-md-4
                  .form-group
                    %label.col-md-4.control-label IPC de Liquidación
                    .col-md-8
                      .input-group
                        = f.input :ipc_settlement, placeholder: "Monto de Liquidación", input_html: { class: 'form-control' }, label: false
                        %span.input-group-addon
                          %i.fa.fa-flag
                .col-md-4
                  .form-group
                    %label.col-md-4.control-label Fecha de Liquidación
                    .col-md-8
                      .input-group
                        = f.input :settlement_date, as: :string, :input_html => {:class => 'form-control', :type => "date"}, label: false
                        %span.input-group-addon
                          %i.fa.fa-calendar
            %fieldset
              %legend Componentes
              .row
                .col-md-3
                  .form-group
                    = f.association :components, :as => :check_boxes, :label => false

              // Bloque de DOCUMENTOS
              .row
                %fieldset
                  %legend Documentos
                  .col-md-6#testimony-of-consortium-container
                    .form-group
                      .col-md-4
                        %label.control-label Minuta/Testimonio de Consorcio
                        %a.btn.btn-labeled.btn-success{ :href => 'javascript:void(0);', :onclick => 'add_docs_testimony();'}
                          %span.btn-label
                            %i.fa.fa-plus
                          - if @action == 'edit' && @work.testimony_of_consortium.exists?
                            = 'Archivo subido: ' + File.basename(@work.testimony_of_consortium.path, File.extname(@work.testimony_of_consortium.path))
                          - else
                            Añadir documentos
                      .col-md-8
                        = f.input :testimony_of_consortium, :input_html => { :class => 'btn btn-default' }, label: false, as: "file"
                        %p.help-block
                          Subir el archivo correspondiente
                      .col-md-12
                        .col-md-4{ :style => 'padding: 0' }
                          - if @action == 'edit'
                            %br
                            .alert.alert-info{ :style => 'margin-bottom: 0;' }
                              %i.fa-fw.fa.fa-info
                              %strong Archivos subidos
                            .table-responsive
                              %table.table.table-bordered.table-striped
                                %thead
                                  %tr
                                    %th Nombre
                                    %th Eliminar
                                %tbody
                                  - if @work.testimony_of_consortium_documents != nil
                                    - @work.testimony_of_consortium_documents.each do |tocd|
                                      %tr
                                        %td{:style => 'display:none'}
                                          = hidden_field_tag 'work[testimony_of_consortium_documents_attributes][' + tocd.created_at.to_time.to_i.to_s + '][id]', tocd.id
                                        %td{:style => 'display:none'}
                                          = hidden_field_tag 'work[testimony_of_consortium_documents_attributes][' + tocd.created_at.to_time.to_i.to_s + '][work_id]', @work.id
                                        %td
                                          = File.basename(tocd.attachment.path, File.extname(tocd.attachment.path)).humanize.downcase;
                                        %td.delete-item
                                          .checkbox
                                            %label
                                              = check_box 'work[testimony_of_consortium_documents_attributes]', '[' + tocd.created_at.to_time.to_i.to_s + '][_destroy]', class: 'checkbox'
                                              %span
                        .col-md-8
                          #attachments-testimony

                  .col-md-6#contract-container
                    .form-group
                      .col-md-4
                        %label.control-label Contrato + Adendas + Ampliación de Plazo
                        %a.btn.btn-labeled.btn-success{ :href => 'javascript:void(0);', :onclick => 'add_docs_contract();'}
                          %span.btn-label
                            %i.fa.fa-plus
                          Añadir documentos
                      .col-md-8
                        = f.file_field :contract, :class => 'btn btn-default', :name => 'work[contract]', :id => 'multiple_contract', label: false, :multiple => true
                        %p.help-block
                          - if @action == 'edit' && @work.contract.exists?
                            = 'Archivo subido: ' + File.basename(@work.contract.path, File.extname(@work.contract.path))
                          - else
                            Subir los archivos correspondientes
                      .col-md-12
                        .col-md-4{ :style => 'padding: 0' }
                          - if @action == 'edit'
                            %br
                            .alert.alert-info{ :style => 'margin-bottom: 0;' }
                              %i.fa-fw.fa.fa-info
                              %strong Archivos subidos
                            .table-responsive
                              %table.table.table-bordered.table-striped
                                %thead
                                  %tr
                                    %th Nombre
                                    %th Eliminar
                                %tbody
                                  - if @work.contract_documents != nil
                                    - @work.contract_documents.each do |cd|
                                      %tr
                                        %td{:style => 'display:none'}
                                          = hidden_field_tag 'work[contract_documents_attributes][' + cd.created_at.to_time.to_i.to_s + '][id]', cd.id
                                        %td{:style => 'display:none'}
                                          = hidden_field_tag 'work[contract_documents_attributes][' + cd.created_at.to_time.to_i.to_s + '][work_id]', @work.id
                                        %td
                                          = File.basename(cd.attachment.path, File.extname(cd.attachment.path)).humanize.downcase;
                                        %td.delete-item
                                          .checkbox
                                            %label
                                              = check_box 'work[contract_documents_attributes]', '[' + cd.created_at.to_time.to_i.to_s + '][_destroy]', class: 'checkbox'
                                              %span
                        .col-md-8
                          #attachments-contract

              %br

              .row
                .col-md-6
                  .form-group
                    %label.col-md-4.control-label Acta de Recepción
                    .col-md-8
                      = f.input :reception_certificate, :input_html => { :class => 'btn btn-default' }, label: false, as: "file"
                      %p.help-block
                        - if @action == 'edit' && @work.reception_certificate.exists?
                          = 'Archivo subido: ' + File.basename(@work.reception_certificate.path, File.extname(@work.reception_certificate.path))
                        - else
                          Subir el archivo correspondiente
                .col-md-6#settlement-container
                  .form-group
                    %label.col-md-4.control-label Liquidación de Obra + Conformidad de Obra
                    .col-md-8
                      = f.input :settlement_of_work, :input_html => { :class => 'btn btn-default' }, label: false, as: "file"
                      %p.help-block
                        - if @action == 'edit' && @work.settlement_of_work.exists?
                          = 'Archivo subido: ' + File.basename(@work.settlement_of_work.path, File.extname(@work.settlement_of_work.path))
                        - else
                          Subir el archivo correspondiente

                  .form-group
                    %label.col-md-4.control-label
                    .col-md-8
                      = f.input :compliance_work, :input_html => { :class => 'btn btn-default' }, label: false, as: "file"
                      %p.help-block
                        - if @action == 'edit' && @work.compliance_work.exists?
                          = 'Archivo subido: ' + File.basename(@work.compliance_work.path, File.extname(@work.compliance_work.path))
                        - else
                          Subir el archivo correspondiente

              %br

              .row
                .col-md-6
                  .form-group
                    %label.col-md-4.control-label Presupuesto
                    .col-md-8
                      = f.input :budget, :input_html => { :class => 'btn btn-default' }, label: false, as: "file"
                      %p.help-block
                        - if @action == 'edit' && @work.budget.exists?
                          = 'Archivo subido: ' + File.basename(@work.budget.path, File.extname(@work.budget.path))
                        - else
                          Subir el archivo correspondiente
                .col-md-6#integrated-bases-container
                  .form-group
                    .col-md-4
                      %label.control-label Bases Integradas + Memoria Descriptiva
                      %a.btn.btn-labeled.btn-success{:href => 'javascript:void(0);', :onclick => 'add_docs_integrated_bases();'}
                        %span.btn-label
                          %i.fa.fa-plus
                        Añadir documentos
                    .col-md-8
                      = f.file_field :integrated_bases, :class => 'btn btn-default', :id => 'multiple_integrated_bases', :name => 'work[integrated_bases]', label: false
                      %p.help-block
                        - if @action == 'edit' && @work.integrated_bases.exists?
                          = 'Archivo subido: ' + File.basename(@work.integrated_bases.path, File.extname(@work.integrated_bases.path))
                        - else
                          Subir el archivo correspondiente
                    .col-md-12
                      .col-md-4{ :style => 'padding: 0' }
                        - if @action == 'edit'
                          %br
                          .alert.alert-info{ :style => 'margin-bottom: 0;' }
                            %i.fa-fw.fa.fa-info
                            %strong Archivos subidos
                          .table-responsive
                            %table.table.table-bordered.table-striped
                              %thead
                                %tr
                                  %th Nombre
                                  %th Eliminar
                              %tbody
                                - if @work.integrated_bases_documents != nil
                                  - @work.integrated_bases_documents.each do |ibd|
                                    %tr
                                      %td{:style => 'display:none'}
                                        = hidden_field_tag 'work[integrated_bases_documents_attributes][' + ibd.created_at.to_time.to_i.to_s + '][id]', ibd.id
                                      %td{:style => 'display:none'}
                                        = hidden_field_tag 'work[integrated_bases_documents_attributes][' + ibd.created_at.to_time.to_i.to_s + '][work_id]', @work.id
                                      %td
                                        = File.basename(ibd.attachment.path, File.extname(ibd.attachment.path)).humanize.downcase;
                                      %td.delete-item
                                        .checkbox
                                          %label
                                            = check_box 'work[integrated_bases_documents_attributes]', '[' + ibd.created_at.to_time.to_i.to_s + '][_destroy]', class: 'checkbox'
                                            %span
                      .col-md-8
                        #attachments-integrated-bases

              %br

              .row
                .col-md-6#arbitration-container
                  .form-group
                    .col-md-4
