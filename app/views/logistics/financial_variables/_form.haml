#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Variables Financieras
  .widget-body
    = simple_form_for([:logistics, @financialVariable], html: {class: 'form-horizontal smart-form', autocomplete: 'off' }) do |f|
      %fieldset
        .row
          %section.col.col-6
            %label.label Nombre
            %label.input{for: "name"}
              %i.icon-append.fa.fa-user
              = f.input :name, placeholder: "Nombre", input_html: { class: 'form-control' }, label: false
        .row
          %section.col.col-6
            %label.label Valor
            %label.input{for: "value"}
              %i.icon-append.fa.fa-user
              = f.input :value, placeholder: "Valor financiero", input_html: { class: 'form-control' }, label: false

      %footer
        %button.btn.btn-primary{type: "submit"}
          %i.fa.fa-save 
          Guardar

:javascript
  $(document).ready(function () {
    $("#financial_variable_name").focus();
    
    if($('form[id^="edit_"]').length > 0) {
      submit_validate($('form[id^="edit_"]'));
    }else{
      submit_validate($('#new_financial_variable'));
    }
  });
  
  function submit_validate(form){
    $(form['selector']).ajaxForm({
      beforeSubmit: function() {
        $(form['selector']).validate({
          // Rules for form validation
          rules : {
            'financial_variable[name]' : {
              required : true,
            },
            'financial_variable[value]' : {
              required : true
            }
          },

          // Messages for form validation
          messages : {
            'financial_variable[name]' : {
              required : 'Porfavor, ingresar el nombre de la variable financiera.'
            },
            'financial_variable[value]' : {
              required : 'Porfavor, ingresar el valor de la variable financiera.'
            }
          },

          // Do not change code below
          errorPlacement : function(error, element) {
            error.insertAfter(element.parent());
          }
        });
        return $(form['selector']).valid();
      },
      target: '#content'
    });
  }