  %body{ 'style' => 'overflow-y:scroll'}
    %header#header
      .pull-right
        / collapse menu button
        #hide-menu.btn-header.pull-right
          %span
            %a{href: "javascript:void(0);", title: "Collapse Menu"}
              %i.fa.fa-reorder
        / end collapse menu
        / logout button
        #logout.btn-header.transparent.pull-right
          %span
            %a{href: "#{destroy_user_session_path}", title: 'Sign out'}
              %i.fa.fa-sign-out
        / end logout button
    -if @company == nil
      - @companies.each do |company| 
        .col-sm-8.col-md-8.col-lg-4
          .well
            .jumbotron{"style" => "overflow: hidden"}
              .col-sm-12.col-md-12.col-lg-6
                %h1= company.name
                %p= "RUC: #{company.ruc}"
                %p
                  %a.btn.btn-primary.btn-lg{ "role" => "button", "href"=> "#{show_panel_logistics_main_path(company.id)}", "data-method"=>"post"}
