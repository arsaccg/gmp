%tr(class="order_delivery_item"){id: "tr" + @reg_n.to_s}
  %td.article-id(style="display:none")
    = hidden_field_tag 'delivery_order[delivery_order_details_attributes][' + @reg_n.to_s + '][article_id]', @id_article.to_i
  %td.measurement-id(style="display:none")
    = hidden_field_tag 'delivery_order[delivery_order_details_attributes][' + @reg_n.to_s + '][unit_of_measurement_id]', @unitOfMeasurementId.to_i
  %td.col-md-1
    = @code_article
  %td.col-md-1
    = @name_article
  %td.col-md-1
    = @unitOfMeasurement
  %td.col-md-1
    = text_field_tag 'delivery_order[delivery_order_details_attributes][' + @reg_n.to_s + '][amount]', @amount.to_i , class: "form-control quantity", id: 'article-amount'
  %td.sector.col-md-1
    %select.form-control{:name =>"delivery_order[delivery_order_details_attributes][#{@reg_n.to_s}][sector_id]"}
      - @sectors.each do |sector|
        %option{:value => "#{sector.id}"}
          = sector.name
  %td
    %select.form-control{:name =>"delivery_order[delivery_order_details_attributes][#{@reg_n.to_s}][phase_id]"}
      - @phases.each do |phase|
        %optgroup{:label => "#{phase.name}"}
          - Phase.get_subphases(phase.code).each do |subphase|
            %option{:value => "#{subphase.id}"}
              = subphase.name
  %td(class="order_delivery_centro_atencion")
  %td(class="order_delivery_fecha_programada")
    %section.col.col-6
      %label.input.state-success
        %i.icon-append.fa.fa-calendar
        %input.scheduled-date.hasDatepicker.valid{:type => "text", :name => "delivery_order[delivery_order_details_attributes][#{@reg_n.to_s}][scheduled_date]"}
  %td(class="order_delivery_equipos")
  %td
    = text_area_tag 'delivery_order[delivery_order_details_attributes][' + @reg_n.to_s + '][description]', nil,class: "form-control description"
  %td{:style => "width: 1%;"}
    %a{href: "javascript:delete_item('"+@reg_n.to_s+"')"}(class="btn") X