#itemsModal.modal.hide.fade(tabindex="-1" role="dialog" aria-hidden="true")
  .modal-header
    %button(type="button" class="close" data-dismiss="modal" aria-hidden="true")X
    %h3
      Insumos
  .modal-body
    %table(class="table-hover white-table small-font table-light"  id="scroll-table" width="100%")
      %input{name: 'article_name', id: 'article_name'}
      %a(href="javascript:load_articles();" class="btn btn-success")
        Buscar
      %thead
        %th
          Codigo
        %th
          Nombre
        %th
          Unidades
      %tbody#articles-t
        
        
:javascript

 
  
  function load_articles(){
    var q = $('#article_name').val();
    $.ajax({
      url: "#{display_articles_management_budgets_path}?q=" + q + "&budget_id=" + budget_id_sel + "&item_id="+ item_id_sel +"&order=" + order_sel
    }).done(function(data) {
       
      $("#articles-t").html(data);
 

    });

  }
  
  