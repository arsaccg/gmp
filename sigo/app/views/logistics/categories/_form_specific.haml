#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Específico
  .widget-body
    = simple_form_for([:logistics, @category], html: {class: 'form-horizontal smart-form', autocomplete: 'off' }) do |f|
      %fieldset
        .row
          %section.col.col-5
            %label.label Grupo
            %label.input
              %select.form-control#category-select
                -if @action=="edit"
                  - @cate.each do |cat|
                    -if @category.code[0,2] == cat.code
                      %option{:value => "#{cat.code}", :rel => "#{cat.code}", :selected => "selected"}
                        = cat.code.to_s + " - " + cat.name
                    -else
                      %option{:value => "#{cat.code}", :rel => "#{cat.code}"}
                        = cat.code.to_s + " - " +  cat.name
                -else
                  - @cate.each do |cat|
                    %option{:value => "#{cat.code}"}
                      = cat.code.to_s + " - " + cat.name
          %section.col.col-5
            %label.label Sub Grupo
            %label.input{for: "subcategory_id"}
              %select.form-control#subcategory-select
                -if @action=="edit"
                  - @subcate.each do |cat|
                    -if @category.code[0,4] == cat.code
                      %option{:value => "#{cat.id}", :rel => "#{cat.code}", :selected => "selected"}
                        = cat.code.to_s + " - " + cat.name
                    -else
                      %option{:value => "#{cat.id}", :rel => "#{cat.code}"}
                        = cat.code.to_s + " - " + cat.name

        .row
          %section.col.col-3
            %label.label Código
            %label.input{for: "code"}
              %i
              - if @category.code != nil
                = text_field(:extrafield, :first_code, class: "form-control", readonly: true, value: "#{@category.code[0,4]}")
              - else
                = text_field(:extrafield, :first_code, class: "form-control", readonly: true)
          %section.col.col-6
            %label.label &nbsp;
            %label.input{for: "code"}
              %i.icon-append.fa.fa-superscript
              - if @category.code != nil
                = f.input :code, placeholder: "Código", :input_html => {:class => 'form-control', :id => 'code-category', :value => "#{@category.code[4,6]}"}, label: false
              - else
                = f.input :code, placeholder: "Código", input_html: { class: 'form-control' }, label: false
        .row
          %section.col.col-10
            %label.label Nombre
            %label.input{for: "name"}
              %i.icon-append.fa.fa-user
              = f.input :name, placeholder: "Nombre del específico", input_html: { class: 'form-control' }, label: false
      %footer
        %button.btn.btn-primary{type: "submit", :onclick => "part_block();"}
          %i.fa.fa-save
            Guardar

