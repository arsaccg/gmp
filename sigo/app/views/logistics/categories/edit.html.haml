#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Editar Grupo
  #widget-grid
    .row
      %article.col-sm-12.col-md-12.col-lg-6
        -if params[:cat]=='cat'
          = render :partial => 'form'
        -if params[:cat]=='sub'
          = render :partial => 'form_subcategory'
        -if params[:cat]=='spe'
          = render :partial => 'form_specific'
  %button.btn.btn-sm.btn-primary.btn-prev#backlist-groups{type: "button"}
    %i.fa.fa-arrow-left>
    Retornar al listado de grupos

:javascript

  $('#backlist-groups').click(function(){
      load_url_ajax("#{logistics_categories_path}", 'content', null, null, 'GET');
  });