- @arrItems.each do |x|
  - @pending = x.amount.to_i - PurchaseOrderDetail.get_total_received(x.id).to_i
  %tr{id: "tr" + @reg_n.to_s}
    %td(style="display:none" class="pod-di")
      = hidden_field_tag 'stock_input[stock_input_details_attributes][' + @reg_n.to_s + '][article_id]', x.id.to_i
    %td
      = x.delivery_order_detail.article.code
    %td
      = x.delivery_order_detail.article.description
    %td.precio
      %select.form-control{:name =>"stock_input[stock_input_details_attributes]['" + @reg_n.to_s + "'][sector_id]"}
        - @sectors.each do |sect|
          %option{:value => "#{sect.id}"}
            = sect.name
    %td
      = x.delivery_order_detail.article.unit_of_measurement.symbol
    %td.unit-price
      = text_field_tag 'stock_input[stock_input_details_attributes][' + @reg_n.to_s + '][amount]', nil, class: "form-control unit-price", onkeypress: "return isNumber(event);", onchange: "this.value = minmax(this.value, 1, #{@pending})"
    %td.unit-price
      = text_field_tag 'stock_input[stock_input_details_attributes][' + @reg_n.to_s + '][equipment_id]', nil, class: "form-control unit-price"
    %td.delete-item
      %label.checkbox
        = check_box 'stock_input', '[stock_input_details_attributes][' + @reg_n.to_s + '][_destroy]'
        %i
  - @reg_n += 1