#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Total por Semana
  .widget-body
    =form_for :total_hours, :url => url_for(:controller => 'cost_centers', :action => 'create_thw'), :html => { :id => "thw",  class: 'smart-form' } do |f|
      %fieldset
        .row
          %section.col.col-10
            %label.label Semana
            = f.hidden_field :week_id, :value=> "#{@week_id}", label: false
            %label.input{for: "code"}
              .input-group
                %i.icon-append.fa.fa-superscript
                %input{:readonly=>true,:value=> "#{@week_name}"}
        .row
          %section.col.col-10
            %label.label Horas Totales
            %label.input{for: "text-field"}
              .input-group
                %i.icon-append.fa.fa-user
                = f.text_field :total, placeholder: "Horas", input_html: { class: 'form-control' }, :value=> "#{@total}", label: false
          
      %footer
        %button.btn.btn-primary{type: "submit"}
          %i.fa.fa-save
            Guardar

:javascript
  $('#thw').ajaxForm({
    beforeSubmit: function() {
      $('#thw').validate({
        // Rules for form validation
        rules : {
          'total_hours[total]' : {
            required : true
          }
        },
        // Messages for form validation
        messages : {
          'total_hours[total]' : {
            required : 'Por favor, ingresar la cantidad de horas por semana'
          }
        },
        // Do not change code below
        errorPlacement : function(error, element) {
          error.insertAfter(element.parent());
        }
      });
      return $('#thw').valid();
    },
    target: '#content'
  })