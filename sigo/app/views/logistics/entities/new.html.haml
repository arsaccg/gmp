#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Crear Entidad
  #widget-grid
    .row
      %article.col-sm-12.col-md-12.col-lg-6
        -if params[:type] == "worker"
          = render :partial => 'form_worker'
        -else
          = render :partial => 'form'
        
  %button.btn.btn-sm.btn-primary.btn-prev#backlist-entity{type: "button"}
    %i.fa.fa-arrow-left>
    Retornar al listado de entidades

:javascript
  $('#backlist-entity').click(function(){
      load_url_ajax("#{logistics_entities_path}", 'content', {company_id: '#{@company_id}'}, null, 'GET');
  });