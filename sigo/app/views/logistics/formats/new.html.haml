#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Nuevo Formato
  #widget-grid
    .row
      %article.col-sm-12.col-md-12.col-lg-6
        = render :partial => 'form'
  %button.btn.btn-sm.btn-primary.btn-prev#backlist-formats{type: "button"}
    %i.fa.fa-arrow-left>
      &nbsp;
      Ver el Listado de Formatos

  %button.btn.btn-sm.btn-primary.btn-prev#backlist-docs{type: "button"}
    %i.fa.fa-arrow-left>
      &nbsp;
      Regresar al Listado de Documentos

:javascript

  $('#backlist-formats').click(function(){
      load_url_ajax("#{logistics_formats_path}", 'content', null, null, 'GET');
  });

  $('#backlist-docs').click(function(){
      load_url_ajax("#{logistics_documents_path}", 'content', null, null, 'GET');
  });