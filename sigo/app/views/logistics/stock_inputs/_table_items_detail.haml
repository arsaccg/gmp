- @arrItems.each do |x|
  - @pending = x.amount.to_i - PurchaseOrderDetail.get_total_received(x.id).to_i
  - @article = x.delivery_order_detail.article
  %tr{id: "tr" + @reg_n.to_s}
    %td(style="display:none" class="pod-di")
      = hidden_field_tag 'stock_input[stock_input_details_attributes][' + @reg_n.to_s + '][company_id]', 1
      = hidden_field_tag 'stock_input[stock_input_details_attributes][' + @reg_n.to_s + '][purchase_order_detail_id]', x.id.to_i
      = hidden_field_tag 'stock_input[stock_input_details_attributes][' + @reg_n.to_s + '][article_id]', @article.id
    %td
      = @article.code
    %td
      = @article.name
    %td
      = @article.unit_of_measurement.symbol
    %td.amount
      = x.amount
    %td.amount
      = @pending
    %td.unit-price
      = text_field_tag 'stock_input[stock_input_details_attributes][' + @reg_n.to_s + '][amount]', nil, class: "form-control unit-price", value: @pending, onkeypress: "return isNumber(event);", onchange: "this.value = minmax(this.value, 0.01, #{@pending})"
    %td.delete-item{ :style => 'text-align: center;' }
      %button.btn.btn-default{ type: 'button', onclick: "delete_item('" + @reg_n.to_s + "')", style: 'padding: 2px 6px;' }
        %i.fa.fa-times
  - @reg_n += 1