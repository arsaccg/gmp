#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Valor Teórico
  .widget-body
    = simple_form_for([:logistics, @theoretical_value], html: {class: 'form-horizontal smart-form', autocomplete: 'off' }) do |f|
      %fieldset
        .row
          %section.col.col-10
            %label.label Id Artículo
            %label.input{for: "article_id"}
              = @articles.id.to_s + @articles.name
              = hidden_field_tag 'theoretical_value[article_id]', @articles.id, class: 'form-control', id: 'article_id'
        .row
          %section.col.col-10
            %label.label Valor Teórico del rendimiento de consumo de Combustible
            %label.input{for: "theoretical_value"}
              = f.input :theoretical_value, placeholder: "Valor Teórico", input_html: { class: 'form-control' }, label: false          
      %footer
        %button.btn.btn-primary{type: "submit"}
          %i.fa.fa-save
            Guardar

:javascript
  $(document).ready(function () {
    if($('form[id^="edit_"]').length > 0) {
      submit_validate($('form[id^="edit_"]'));
    }else{
      submit_validate($('#new_theoretical_value'));
    }
  });

  function submit_validate(form){
    $(form['selector']).ajaxForm({
      beforeSubmit: function() {
        $(form['selector']).validate({
          // Rules for form validation
          rules : {
            'theoretical_value[article_id]' : {
              required : true
            },
            'theoretical_value[theoretical_value]' : {
              required : true
            }
          },

          // Messages for form validation
          messages : {
            'theoretical_value[article_id]' : {
              required : '(*)'
             },
            'theoretical_value[theoretical_value]' : {
              required : '(*)'
             }
          },

          // Do not change code below
          errorPlacement : function(error, element) {
            error.insertAfter(element.parent());
          }
        });
        // Remove all Help-inLine
        $(".help-inline").remove();
        // Client Valid
        return $(form['selector']).valid();
      },
      target: '#content',
      success: function (data){
        $(".help-inline").parent().addClass("state-error");
      },
      error: function(xhr, status, error) {
      }
    });
  }