#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-7
      %h2.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Administrar Valorizacion

  #widget-grid
    .row
      %article.col-sm-12.col-md-12.col-lg-6
        #wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
          %header
            %span.widget-icon
              %i.fa.fa-eye
            %h2 Valorizacion
          .widget-body
            =simple_form_for [:management, @valorization], html: {class: "form-horizontal smart-form", autocomplete: 'off', :id => "v_form"} do |f|
              %fieldset
                .row
                  %section.col.col-10
                    %label.label Fecha
                    %label.input{for: "valorization_date"}
                      = f.input :valorization_date, :label => "Mes", input_html: { class: 'form-control' }, label: false
              %footer
                %a{:href=>"javascript:post_to_url_class('" + management_valorization_path(@valorization.id).to_s + "', 'simple_form', 'right-area');", :class=>"btn btn-success"}
                  %i.fa.fa-save
                  Guardar Valorizacion
                %a{href: "javascript: load_url_ondiv('#{administrate_budget_management_budgets_path}' , 'right-area');", class: "btn btn-danger"} Cancelar


:javascript 
  $("#valorization_valorization_date_3i").val("1");
  $("valorization_valorization_date_3i").fadeOut();
  function load_back(url){
    load_url_ondiv(url, 'right-area');
  }