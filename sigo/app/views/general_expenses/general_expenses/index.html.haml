#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h2.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Lista de Gastos Generales
      - if flash[:notice] !=nil
        .alert.alert-success.fade.in{"style" => "clear:both"}
          %button.close{"data-dismiss" => "alert"}
            x
          %i.fa-fw.fa.fa-check
          %strong Exito
          = flash[:notice]
      - if flash[:error] != nil
        .alert.alert-danger.fade.in
          %button.close{"data-dismiss" => "alert"}
            x
          %i.fa-fw.fa.fa-check
          %strong Error!
          = flash[:error]
  .row
    .col-sm-4
      %button.btn.btn-primary.btn-mini{:onclick => "javascript:load_url_ajax('#{new_general_expenses_general_expense_path}', 'content', null, null, 'GET')"}
        Agregar Gasto
      %button.btn.btn-primary.btn-mini
        %span{"style"=>"width=20px;text-align:center"}
          %a{href: 'javascript:void(0);', :onclick => 'report();', "style"=>" color: white; "}
            Ver Reporte
  %br
  .row
    #widget-grid{ "style"=>"  height: 60%; overflow-y: scroll; "} 
      %article.col-xs-12.col-sm-12.col-md-12.col-lg-12
        = render :partial => 'table'
  .row{"style"=>"height: 40%; overflow-y: scroll;"}
    #detail
#report.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "reportLabel", role: "dialog", tabindex: "-1"}

:javascript
  function report() {
    data = { authenticity_token: "#{form_authenticity_token}"};
    load_url_ajax('#{report_general_expenses_general_expenses_path}', 'report', data, '', 'POST');
    $('#report').modal({
      keyboard: false,
      backdrop: 'static'
    });
  }