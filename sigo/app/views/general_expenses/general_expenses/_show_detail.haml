%a{href: "javascript:delete_item('detail')", "style"=>"  width: 50px; float: right; color: white; background: #2070a8; "}(class="btn") X
%row
  %header
    %h2{"style"=>"font-size:20px;margin-left: 10px;"}=Phase.find(@ge.phase_id).code.to_s+" "+Phase.find(@ge.phase_id).name.to_s + " ("+number_to_currency(@ge.total.to_s, unit: 'S/. ', precision: 2)+")"
-if @type_01.count>0
  .col-lg-12#personal
    %legend= "Conceptos: Personal ("+number_to_currency(@t1.to_s, unit: 'S/. ', precision: 2)+")"
    %table.table.table-striped.table-bordered.table-hover.has-tickbox.smart-form
      %thead
        %tr
          %th Código
          %th Descripción
          %th Unidad
          %th Personas
          %th %Participación
          %th Tiempo
          %th Sueldo/Jornal
          %th Parcial
      %tbody#personal_table
        - @type_01.each do |ged|
          %tr
            %td{:style => "width:5%"}
              = Article.find(ged.article_id.to_s).code.to_s
            %td{:style => "width:20%"}
              = Article.find(ged.article_id.to_s).name.to_s    
            %td{:style => "width:5%"}
              = Article.find(ged.article_id.to_s).unit_of_measurement.symbol.to_s
            %td.col-md-1.smart-form{:style => "width:5%"}
              =ged.people.to_s
            %td.col-md-1.smart-form{:style => "width:5%"}
              =ged.participation.to_s
            %td.col-md-1.smart-form{:style => "width:5%"}
              =ged.time.to_s
            %td.col-md-1.smart-form{:style => "width:5%"}
              =number_to_currency(ged.cost.to_s, unit: 'S/. ', precision: 2)
            %td.col-md-1.smart-form{:style => "width:5%"}
              = number_to_currency(ged.parcial.to_s, unit: 'S/. ', precision: 2)
    %br

