.modal-dialog
  .modal-content
    .modal-header{"style"=>"background-color:#296191;color:white;padding-top:8px;padding-bottom:8px"}
      %button{"class"=>"close", "data-dismiss"=>"modal"}
        %span{"aria-hidden"=>"true","style"=>"color:white;"} &times;
        %span{"class"=>"sr-only"} Close
      %h4{"class"=>"modal-title","style"=>"font-weight:900; text-align: center;"} Datos Generales del Proyecto
    .modal-body{"style"=>"background-color:#E6E6E6;"}
      %table.table.table-bordered.table-hover
        %tr
          %th
          %th{"style"=>"background-color: #f9f9f9;;"}
            VENTA
          %th{"style"=>"background-color: #f9f9f9;;"}
            META
          %th{"style"=>"background-color: #f9f9f9;;"}
            DIFERENCIA
        %tr
          %th
            COSTO DIRECTO
          %th
            = number_to_currency(@total_sale, unit: 'S/. ', precision: 2)
          %th
            = number_to_currency(@total_goal, unit: 'S/. ', precision: 2)
          %th
            = number_to_currency(@total_sale-@total_goal, unit: 'S/. ', precision: 2)
        - @direct_cost.each do |opr|
          %tr
            %td{"style"=>"background-color: #f9f9f9;"}= opr[0]
            %td{"style"=>"background-color: #f9f9f9;"}= number_to_currency opr[1], unit: 'S/. ', precision: 2
            %td{"style"=>"background-color: #f9f9f9;"}= number_to_currency opr[2], unit: 'S/. ', precision: 2
            - if opr[3] < 0
              %td{"style"=>"background-color: #f9f9f9; color:red;"}= number_to_currency opr[3], unit: 'S/. ', precision: 2
            - else
              %td{"style"=>"background-color: #f9f9f9;"}= number_to_currency opr[3], unit: 'S/. ', precision: 2
        %tr
          %th G.G
          - @gastos_generales.each do |ga_ge|
            %td= number_to_currency ga_ge[0], unit: 'S/. ', precision: 2
            %td= number_to_currency ga_ge[1], unit: 'S/. ', precision: 2
            - if ga_ge[2] < 0
              %td{"style"=>"color:red;"}= number_to_currency ga_ge[2], unit: 'S/. ', precision: 2
            - else
              %td= number_to_currency ga_ge[2], unit: 'S/. ', precision: 2
        %tr
          %th UTILIDAD
          - @utility.each do |util|
            %td= number_to_currency util[0], unit: 'S/. ', precision: 2
            %td= number_to_currency util[1], unit: 'S/. ', precision: 2
            - if util[2] < 0
              %td{"style"=>"color:red;"}= number_to_currency util[2], unit: 'S/. ', precision: 2
            - else
              %td= number_to_currency util[2], unit: 'S/. ', precision: 2
        %tr
          %th GASTOS DE GESTIÃ“N
          - @gastos_gestion.each do |gg|
            %td= number_to_currency gg[0], unit: 'S/. ', precision: 2
            %td= number_to_currency gg[1], unit: 'S/. ', precision: 2
            - if gg[2] < 0
              %td{"style"=>"color:red;"}= number_to_currency gg[2], unit: 'S/. ', precision: 2
            - else
              %td= number_to_currency gg[2], unit: 'S/. ', precision: 2
        %tr
          %th{"style"=>"background-color: #f9f9f9;"} TOTAL
          %td{"style"=>"background-color: #f9f9f9;"}= number_to_currency @total_venta, unit: 'S/. ', precision: 2
          %td{"style"=>"background-color: #f9f9f9;"}= number_to_currency @total_meta, unit: 'S/. ', precision: 2
          - if (@total_venta - @total_meta) < 0
            %td{"style"=>"background-color: #f9f9f9;"}= number_to_currency (@total_venta - @total_meta), unit: 'S/. ', precision: 2
          - else
            %td{"style"=>"background-color: #f9f9f9;"}= number_to_currency (@total_venta - @total_meta), unit: 'S/. ', precision: 2