#wid-id-5.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-custombutton" => "false", "data-widget-editbutton" => "false", "data-widget-fullscreenbutton" => "false", "data-widget-sortable" => "false", "data-widget-deletebutton" => "false"}
  %header
    %h2 Lista de Leyes y Reglamentos
  %div
    .jarviswidget-editbox
    .widget-body
      .tabs-left
        %ul.nav.nav-tabs.tabs-left
          - @type_laws.each do |type_laws|
            - if type_laws.id == 1
              %li.active
                %a{"data-toggle" => "tab", href: "#tab-#{type_laws.id}"}
                  %span.badge.bg-color-blue.txt-color-white
                    = type_laws.law_and_regulations.count
                  = type_laws.name
            - else
              %li
                %a{"data-toggle" => "tab", href: "#tab-#{type_laws.id}"}
                  %span.badge.bg-color-blue.txt-color-white
                    = type_laws.law_and_regulations.count
                  = type_laws.name
        .tab-content
          - @type_laws.each do |type_laws|
            - if type_laws.id == 1
              .tab-pane.active{:id => "tab-#{type_laws.id}"}
                .col-md-10
                  %table.table.table-condensed.table-bordered
                    %thead
                      %tr
                        %th Nombres
                        %th Descripción
                        %th Documentos
                        %th Acciones
                    %tbody
                      - type_laws.law_and_regulations.each do |lawre|
                        %tr
                          %td
                            = lawre.name.to_s
                          %td
                            = lawre.description.to_s
                          %td
                            - if lawre.document.exists?
                              %a.btn.btn-info.btn-xs{:href =>"#{lawre.document.url}", :target => "_blank"}
                                %i.fa.fa-clipboard
                            -else
                              No hay ningun Archivo adjunto
                          %td
                            %a.btn.btn-warning.btn-xs{:onclick => "javascript:load_url_ajax('#{edit_libraries_law_and_regulation_path(lawre.id)}', 'content', null, null, 'GET')"}
                              Editar
                            %a.btn.btn-danger.btn-xs{:data => {:toggle => 'confirmation', :placement => 'left', :title => 'Esta seguro de eliminar el item ' + "#{lawre.name}?", :singleton => 'true', :popout => 'true', :onclick => "javascript:delete_to_url('#{libraries_law_and_regulation_path(lawre.id)}' + '?authenticity_token=#{form_authenticity_token} + ?type=#{type_laws.id}', 'content', '#{libraries_law_and_regulations_path}')"}}
                              Eliminar
            - else
              .tab-pane{:id => "tab-#{type_laws.id}"}
                .col-md-10
                  %table.table.table-condensed.table-bordered
                    %thead
                      %tr
                        %th Nombres
                        %th Descripción
                        %th Documentos
                        %th Acciones
                    %tbody
                      - type_laws.law_and_regulations.each do |lawre|
                        %tr
                          %td
                            = lawre.name.to_s
                          %td
                            = lawre.description.to_s
                          %td
                            - if lawre.document.exists?
                              %a.btn.btn-info.btn-xs{:href =>"#{lawre.document.url}", :target => "_blank"}
                                %i.fa.fa-clipboard
                            -else
                              No hay ningun Archivo adjunto
                          %td
                            %a.btn.btn-warning.btn-xs{:onclick => "javascript:load_url_ajax('#{edit_libraries_law_and_regulation_path(lawre.id)}', 'content', null, null, 'GET')"}
                              Editar
                            %a.btn.btn-danger.btn-xs{:data => {:toggle => 'confirmation', :placement => 'left', :title => 'Esta seguro de eliminar el item ' + "#{lawre.name}?", :singleton => 'true', :popout => 'true', :onclick => "javascript:delete_to_url('#{libraries_law_and_regulation_path(lawre.id)}' + '?authenticity_token=#{form_authenticity_token} + ?type=#{type_laws.id}, 'content', '#{libraries_law_and_regulations_path}')"}}
                              Eliminar

