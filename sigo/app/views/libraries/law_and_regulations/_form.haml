#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Leyes y Reglamentos
  .widget-body
    = simple_form_for([:libraries, @laws], html: {class: 'form-horizontal smart-form', autocomplete: 'off' }) do |f|
      %fieldset
        .row
          %section.col.col-md-8
            %label.label Nombre
            %label.input{for: "name"}
              %i.icon-append.fa.fa-user
              = f.input :name, placeholder: "Nombre", input_html: { class: 'form-control' }, label: false
        %br
        .row
          %section.col.col-md-12
            %label.label Descripción 
            %label.input
              = f.input :description, placeholder: "Descripción", input_html: { class: 'form-control' }, label: false, rows: 4
        .row
          %section.col.col-md-12
            %label.label Tipo
            %section.col.col-10
              = f.association :type_of_law_and_regulations, :as => :check_boxes, :label => false

        .row
          %section.col.col-md-12
            %label.label Documento
            -if @action == nil
              = f.input :document, :input_html => { :class => 'btn btn-default' }, label: false, as: "file", required: true
            -else
              = f.input :document, :input_html => { :class => 'btn btn-default' }, label: false, as: "file"
            %p.help-block
              - if @action == 'edit' && @laws.document.exists?
                = 'Archivo subido: ' + File.basename(@laws.document.path, File.extname(@laws.document.path))
              - else
                Subir el archivo correspondiente
        %br
        .row
          %section.col.col-md-12     
            %label Tipo de Centro de Costo
            %select.select2.form-control#speciality_select{:name =>"law_and_regulation[type_of_cost_center]"}
              %option{:value => nil, :disabled=>true, :selected => true} Seleccione una especialidad
              %option{:value => "saneamiento", :selected => "#{@laws.type_of_cost_center}"=="saneamiento"}
                Saneamiento
              %option{:value => "electrico", :selected => "#{@laws.type_of_cost_center}"=="electrico"}
                Eléctrico
              %option{:value => "civil", :selected => "#{@laws.type_of_cost_center}"=="civil"}
                Civil
              %option{:value => "administracion", :selected => "#{@laws.type_of_cost_center}"=="administracion"}
                Administración         
      %footer
        %button.btn.btn-primary{type: "submit", :onclick => "part_block();"}
          %i.fa.fa-save 
          Guardar

:javascript
  $(document).ready(function () {
    $('.check_boxes').attr("style", 'position: relative; left: 0;');
    if($('form[id^="edit_"]').length > 0) {
      submit_validate($('form[id^="edit_"]'));
    }else{
      submit_validate($('#new_law_and_regulation'));
    }

  });
  
  function submit_validate(form){
    $(form['selector']).ajaxForm({
      beforeSubmit: function() {
        $(form['selector']).validate({
          // Rules for form validation
          rules : {
            'law_and_regulation[name]' : {
              required : true
            },
            'law_and_regulation[description]' : {
              required : true,
            },
            'law_and_regulation[type_of_law_and_regulation_ids]':{
              required: true
            }
          },

          // Messages for form validation
          messages : {
            'law_and_regulation[name]' : {
              required : "Por favor, ingrese el nombre del documento"
            },
            'law_and_regulation[description]' : {
              required : "Por favor, ingrese una descripción para el documento"
            },
            'law_and_regulation[type_of_law_and_regulation_ids]':{
              required: "Seleccione un tipo"
            }
          },

          // Do not change code below
          errorPlacement : function(error, element) {
            error.insertAfter(element.parent());
            $('#modalLoadingLabelading').modal('hide');
            $('.modal-backdrop.fade.in').remove();
          }
        });
        // Remove all Help-inLine
        $(".help-inline").remove();
        $('#modalLoadingLabelading').modal('hide');
        $('.modal-backdrop.fade.in').remove();
        // Client Valid
        if( $(form['selector']).valid() ){
          $('#modalLoadingLabelading').modal();
        }
        // Client Valid
        return $(form['selector']).valid();
      },
      target: '#content',
      success: function (data){
        $(".help-inline").parent().addClass("state-error");
        $('#modalLoadingLabelading').modal('hide');
        $('.modal-backdrop.fade.in').remove();
      },
      error: function(xhr, status, error) {
        $('#modalLoadingLabelading').modal('hide');
        $('.modal-backdrop.fade.in').remove();
      }
    });
  }