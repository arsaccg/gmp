.modal-dialog{ style: "width: 850px;" }
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
        \Ã—
      %h4.modal-title Cuadro Resumen Equipo de subcontrato
    .modal-body
      %h1.page-title.txt-color-blueDark= @name2
      %table.table.table-bordered
        %thead
          %tr
            %th #
            %th #Parte
            %th Fecha
            %th H.inicio
            %th H.fin
            %th H.horas
            %th H.Efectivas
            %th Suministro
            %th Combustible
        %tbody
        - index = 1
        - status = false
        - row1 = ""
        - row2 = ""
        - row3 = ""
        - row4 = ""
        - row5 = ""
        - row6 = ""
        - row7 = ""
        - row8 = ""
        - @dias_habiles.each do |dia|
          - @poe_array.each do |workerDetail|
            -if workerDetail[1]==dia
              - if !status
                - status = true
                - row1 = workerDetail[0]
                - row2 = workerDetail[1]
                - row3 = workerDetail[2]
                - row4 = workerDetail[3]
                - row5 = workerDetail[4]
                - row6 = workerDetail[5]
                - row7 = workerDetail[6]
                - row8 = workerDetail[7]
                - break
            -else
              - status = false
              - row1 = '--'
              - row2 = dia
              - row3 = '--'
              - row4 = '--'
              - row5 = '--'
              - row6 = '--'
              - row7 = '--'
              - row8 = '--'
          %tr
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = index
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row1
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row2
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row3
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row4
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row5
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row6
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row7
            %th{'style' => 'font-weight: normal;text-align:center;vertical-align: middle'}
              = row8
          - index += 1
        %tr
          %th{'colspan' => 5}
            TOTAL
          %th{'style' => 'text-align:center;vertical-align: middle'}= sprintf('%.2f',@totaldif)
          %th{'style' => 'text-align:center;vertical-align: middle'}= sprintf('%.2f',@totaltotalhours)
          %th
          %th{'style' => 'text-align:center;vertical-align: middle'}= sprintf('%.2f',@totalfuel_amount)
    .modal-footer
      %a.btn.btn-primary.btn-xs{ :href => "#{report_of_equipment_pdf_production_valuation_of_equipments_path}.pdf?subcontractequipment=#{@subcontractequipmentarticle}&name=#{@entityname}&start_date=#{@start_date}&end_date=#{@end_date}&cad=#{@cad}&id=#{@id}", :target => '_blank', :style=>"float: right;"}
        Ver PDF
      %button.btn.btn-info{"data-dismiss" => "modal", type: "button",:style=>"float: left;"}
        Salir