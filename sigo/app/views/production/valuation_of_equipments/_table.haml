                %a.btn.btn-danger.btn-xs{:data => {:toggle => 'confirmation', :placement => 'left', :title => 'Esta seguro de eliminar el item ' + "#{unit.name}?", :singleton => 'true', :popout => 'true', :onclick => "javascript:delete_to_url('#{production_valuation_of_equipment_path(unit.id)}' + '?authenticity_token=#{form_authenticity_token}', 'content', '#{production_valuation_of_equipments_path}?company_id=#{@company}')"}}
