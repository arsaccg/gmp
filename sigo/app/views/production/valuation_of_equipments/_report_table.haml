        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 47 && charCode < 58 || charCode==46) {
          return true;
        }else{
          return false;
        }
      }

      function minmax(value, min, max){
        if($('#flag').is(':checked')){
          max = 100;
        }else{
          max = parseFloat($('#total').text());
        }
        
        if(parseInt(value) < min || isNaN(value)) 
          return min; 
        else if(parseInt(value) > max) 
          return max; 
        else return value;
      }

