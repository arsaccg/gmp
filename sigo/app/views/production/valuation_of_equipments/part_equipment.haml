.modal-dialog{ style: "width: 900px;" }
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
        \Ã—
      %h4.modal-title Descuento de Equipos
    .modal-body
      -if @workers_array3.count>0
        %h1.page-title.txt-color-blueDark Parte de Equipos
        %table.table.table-bordered
          %thead
            %tr
              %th{'colspan' => 11, "style"=>"color:#5f5f5f"}=@name + ' ' + @code
            %tr
              %th #
              %th Equipo
              %th Und
              %th Precio U.
              %th Metrado Anterior
              %th Monto Anterior
              %th Metrado Actual
              %th Monto Actual
              %th Metrado Acumulado
              %th Monto Acumulado
              %th Accion
          %tbody
          - index = 1
          - @workers_array3.each do |workerDetail3|
            %tr
              %th= index
              %th= workerDetail3[5] + ' ' + workerDetail3[0]
              %th= workerDetail3[1]
              %th= workerDetail3[3]
              %th= workerDetail3[7]
              %th= workerDetail3[9]
              %th= workerDetail3[2]
              %th= workerDetail3[4]
              %th
              %th= workerDetail3[4]
              %th
                %span{"style"=>"width=20px"}
                  %a.btn.bg-color-blueDark{href: 'javascript:void(0);', :onclick => "report_of_equipment(#{workerDetail3[6]})"}
                    %i.fa.fa-list-alt.fa-md.fa-fw{"style"=>"color:white"}
            - index += 1
      -else
        %h4.modal-title No hay datos.
        %br
      %footer
        %button.btn.btn-info{"data-dismiss" => "modal", type: "button"}
          Salir
    %br

:javascript

  function report_of_equipment(subcontract) {
    data = { authenticity_token: "#{form_authenticity_token}", start_date: "#{@start_date}", end_date: "#{@end_date}", cad: "#{@cad}", subcontractequipment: subcontract, name: "#{@name}" };
    load_url_ajax('#{report_of_equipment_production_valuation_of_equipments_path}', 'report-equipment', data, '', 'POST');
    $('#part-equipment').modal('hide');
    $('#report-equipment').modal({
      keyboard: false,
      backdrop: 'static'
    });
  }