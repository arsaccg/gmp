.modal-dialog
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
        \×
      %h4.modal-title Fondo de Garantía N°02
    .modal-body
      -if @workers_array.count > 0
        %h1.page-title.txt-color-blueDark Mano de Obra
        %table.table.table-bordered
          %tbody
            - @workers_array.each do |workerDetail|
              %tr
                %th= workerDetail[0]
                %th= number_to_currency(workerDetail[4], unit: '', precision: 2)
                %th= workerDetail[10]
                %th= number_to_currency(workerDetail[1], unit: '', precision: 2)
                %th= number_to_currency(workerDetail[7], unit: 'S/. ', precision: 2)
              %tr
                %th= workerDetail[0]+' HE 60%'
                %th= number_to_currency(workerDetail[5], unit: '', precision: 2)
                %th= workerDetail[10]
                %th= number_to_currency(workerDetail[2], unit: '', precision: 2)
                %th= number_to_currency(workerDetail[8], unit: 'S/. ', precision: 2)
              %tr
                %th= workerDetail[0]+' HE 100%'
                %th= number_to_currency(workerDetail[6], unit: '', precision: 2)
                %th= workerDetail[10]
                %th= number_to_currency(workerDetail[3], unit: '', precision: 2)
                %th= number_to_currency(workerDetail[9], unit: 'S/. ', precision: 2)
            %tr
              %th{'colspan' => 4} Total
              %th
                %span.label.label-danger{"style"=>"color:#fff"}
                  = number_to_currency(@totalprice, unit: 'S/. ', precision: 2)
      - else
        %h4.modal-title No hay datos.
        %br
      %footer
        %button.btn.btn-info{"data-dismiss" => "modal", type: "button"}
          Salir