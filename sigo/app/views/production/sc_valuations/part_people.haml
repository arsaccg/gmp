-if @workers_array.count>0
  %div
    Mano de Obra
    .jarviswidget-editbox
    .widget-body
      %table.table.table-bordered
        %tbody
          - @workers_array.each do |workerDetail|
            %tr
              %th= workerDetail[0]
              %th= workerDetail[4]
              %th= workerDetail[10]
              %th= workerDetail[1]
              %th= workerDetail[7]
            %tr
              %th= workerDetail[0]+' HE 60%'
              %th= workerDetail[5]
              %th= workerDetail[10]
              %th= workerDetail[2]
              %th= workerDetail[8]
            %tr
              %th= workerDetail[0]+' HE 100%'
              %th= workerDetail[6]
              %th= workerDetail[10]
              %th= workerDetail[3]
              %th= workerDetail[9]
          %tr
            %th{'colspan' => 4} Total
            %th
              %span.label.label-danger{"style"=>"color:#fff"}
                = @totalprice