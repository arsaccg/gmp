.modal-dialog{"style"=>"width:1050px;"}
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
        \×
      %h4.modal-title Valorización sin IGV
    .modal-body
      -if @workers_array2.count>0
        %h1.page-title.txt-color-blueDark Parte de Obra
        %table.table.table-bordered
          %thead
            %tr
              %th Codigo
              %th Partida
              %th P.U.
              %th Total
              %th Actual
              %th Parcial
              %th Acumulado
              %th Saldo
              
          %tbody
          -i=0
          - @workers_array2.each do |workerDetail2|
            %tr
              %th{"style" =>"font-weight:normal;"}= workerDetail2[2]
              %th{"style" =>"font-weight:normal;"}= workerDetail2[1]
              %th{"style" =>"font-weight:normal;"}
                -if !@subcontract.nil?
                  -@subcontract.subcontract_details.each do |sub|
                    -if sub.itembybudget.order==workerDetail2[2]
                      =sub.unit_price
                -else
                  =""
              %th{"style" =>"font-weight:normal;"}
                -if !@subcontract.nil?
                  -@subcontract.subcontract_details.each do |sub|
                    -if sub.itembybudget.order==workerDetail2[2]
                      =sub.amount
                -else
                  =""
              %th{"style" =>"font-weight:normal;"}= workerDetail2[3].round(2)

              %th{"style" =>"font-weight:normal;"}
                -if !@subcontract.nil?
                  -@subcontract.subcontract_details.each do |sub|
                    -if sub.itembybudget.order==workerDetail2[2]
                      =number_to_currency((sub.unit_price*workerDetail2[3].round(2)).round(2), unit: 'S/. ', precision: 2)
                -else
                  =""
              %th{"style" =>"font-weight:normal;"}
                = @array5[i].round(2)
              %th{"style" =>"font-weight:normal;"}
                -if !@subcontract.nil?
                  -@subcontract.subcontract_details.each do |sub|
                    -if sub.itembybudget.order==workerDetail2[2]
                      = sub.amount-@array5[i].round(2)
                      -i=i+1
                -else
                  =""
      - else
        %h4.modal-title No hay datos.
        %br
      %footer
        %a.btn.btn-sm.btn-success.btn-prev{ :href => "#{part_work_pdf_production_sc_valuations_path}.pdf?start_date=#{@start_date}&end_date=#{@end_date}&cad=#{@cad}&name=#{@name}", :target => '_blank', :style=>"float: right;"}
          Ver PDF
        %button.btn.btn-info{"data-dismiss" => "modal", type: "button"}
          Salir