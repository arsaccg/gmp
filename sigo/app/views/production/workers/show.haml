#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-12
      %h1.page-title.txt-color-blueDark
        = "Trabajador" + ': ' + @worker.entity.paternal_surname.to_s + ' ' + @worker.entity.maternal_surname.to_s + ' ' + @worker.entity.name.to_s
      %br
        %table.table.table-bordered{ style: "width: 700px;margin: 0 auto" }
          %thead
            %tr
              %th{"style"=>"text-align:center",'colspan' => 6} Formulario del Trabajador
          %tbody
            %tr
              %th Nombre Completo
              %th{'colspan' => 5}= @worker.entity.paternal_surname.to_s + ' ' + @worker.entity.maternal_surname.to_s + ' ' + @worker.entity.name.to_s + ' ' + @worker.entity.second_name.to_s
            %tr
              %th Cargo del Trabajador
              %th{'colspan' => 2}= @worker.position_worker.name
              %th Fecha de Nacimiento
              %th{'colspan' => 2}= @worker.entity.date_of_birth.to_s
            %tr
              %th DNI
              %th{'colspan' => 2}= @worker.entity.dni.to_s
              %th Carnet de Extranjeria
              %th{'colspan' => 2}= @worker.entity.alienslicense.to_s
            %tr
              %th Email
              %th{'colspan' => 2}= @worker.email
              %th Estado Civil
              %th{'colspan' => 2}= @worker.maritalstatus
            %tr
              %th TelÃ©fono
              %th{'colspan' => 2}= @worker.phone
              %th Celular
              %th{'colspan' => 2}= @worker.cellphone
            %tr
              %th Licencia de Conducir
              %th{'colspan' => 2}= @worker.driverlicense
              %th CUSPP
              %th{'colspan' => 2}= @worker.afpnumber
            %thead
              %tr
                %th{"style"=>"text-align:center",'colspan' => 6} Lugar de Nacimiento
            %tbody
              %th Ciudad
              %th{"style"=>"text-align:center;"}= @worker.entity.city
              %th Provincia
              %th{"style"=>"text-align:center;"}= @worker.entity.province
              %th Departamento
              %th{"style"=>"text-align:center;"}= @worker.entity.department
            %thead
              %tr
                %th{"style"=>"text-align:center",'colspan' => 6} Residencia Actual
            %tbody
              %tr
                %th Direccion
                %th{'colspan' => 3,"style"=>"text-align:center;"}= @worker.address
                %th Pais
                %th{"style"=>"text-align:center;"}= @worker.pais
              %th Distrito
              %th{"style"=>"text-align:center;"}= @worker.district
              %th Provincia
              %th{"style"=>"text-align:center;"}= @worker.province
              %th Departamento
              %th{"style"=>"text-align:center;"}= @worker.department

%button.btn.btn-sm.btn-primary.btn-prev#backlist{type: "button"}
  %i.fa.fa-arrow-left>
  Retornar al listado de Trabajadores

:javascript

  $('#backlist').click(function(){
      load_url_ajax("#{production_workers_path}", 'content', {company_id: '#{@company}'}, null, 'GET');
  });