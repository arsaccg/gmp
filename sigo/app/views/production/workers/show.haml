  %article.col-sm-12.col-md-12.col-lg-12
    #wid-id-2.jarviswidget.jarviswidget-color-greenDark{"data-widget-collapsed" => "false", "data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
      %header
        %span.widget-icon
          %i.fa.fa-table
        %h2 Documentos
      %div
        .jarviswidget-editbox
          / This area used as dropdown edit box
        .widget-body.no-padding
          .alert.alert-info.no-margin.fade.in
            %button.close{"data-dismiss" => "alert"}
              ×
            %i.fa-fw.fa.fa-info
            Documentos subidos de la Obra
          .col-sm-12
            .row
              %table.table.table-bordered
                %thead
                  %tr
                    %th Nombre del Documento
                    %th Documento
                %tbody
                  - if @worker.cv_file_name != nil
                    %tr
                      %td Curriculum Vitae
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.cv.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.antecedent_police_file_name != nil
                    %tr
                      %td Certificado de Antecedentes Policiales
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.antecedent_police.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.dni_file_name != nil
                    %tr
                      %td Documento Nacional de Identidad
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.dni.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.cts_deposit_letter_file_name != nil
                    %tr
                      %td Carta de Deposito de C.T.S.
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.cts_deposit_letter.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.pension_funds_letter_file_name != nil
                    %tr
                      %td Carta de Fondos Previsionales
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.pension_funds_letter.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.affidavit_file_name != nil
                    %tr
                      %td Declaración Jurada
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.affidavit.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.marriage_certificate_file_name != nil
                    %tr
                      %td Certificado de Convivencia / Partida de Matrimonio
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.marriage_certificate.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.birth_certificate_of_childer_file_name != nil
