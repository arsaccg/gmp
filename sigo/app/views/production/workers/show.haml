                      %td DNI Hijos y Esposa
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.dni_wife_kids.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.schoolar_certificate_file_name != nil
                    %tr
                      %td Constancia de Matricula (Asig. Escolar)
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.schoolar_certificate.url}", :target => "_blank"}
                          %i.fa.fa-clipboard

