                      %td Partida de Nacimiento de Hijos
                      %td
                        %a.btn.btn-info.btn-xs{:href =>"#{@worker.birth_certificate_of_childer.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                  - if @worker.dni_wife_kids_file_name != nil
