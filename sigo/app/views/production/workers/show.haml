#content-inside
  .row
    %article.col-sm-12.col-md-12.col-lg-12
      #wid-id-0.jarviswidget.jarviswidget-color-greenDark{"data-widget-collapsed" => "false", "data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
        %header
          %h2 Formulario del Trabajador
        %div
          .jarviswidget-editbox
            / This area used as dropdown edit box
          .widget-body.no-padding
            %table.table.table-hover
              %thead
                %tr
                  %th{"style"=>"text-align:center;font-size: large",'colspan' => 6} Datos Generales
              %tbody
                %tr
                  %th Nombre Completo
                  %th{'colspan' => 5}= @worker.entity.paternal_surname.to_s + ' ' + @worker.entity.maternal_surname.to_s + ' ' + @worker.entity.name.to_s + ' ' + @worker.entity.second_name.to_s
                %tr
                  %th Cargo del Trabajador
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.position_worker.name
                  %th Fecha de Nacimiento
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.entity.date_of_birth.to_s
                %tr
                  %th DNI
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.entity.dni.to_s
                  %th Carnet de Extranjeria
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.entity.alienslicense.to_s
                %tr
                  %th Email
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.email
                  %th Estado Civil
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.maritalstatus
                %tr
                  %th Teléfono
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.phone
                  %th Celular
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.cellphone
                %tr
                  %th Licencia de Conducir
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.driverlicense
                  %th CUSPP
                  %th{'colspan' => 2,"style"=>"font-weight: 500"}= @worker.worker_afps.last.afpnumber rescue ''
                %thead
                  %tr
                    %th{"style"=>"text-align:center;font-size: large",'colspan' => 6} Lugar de Nacimiento
                %tbody
                  %th Ciudad
                  %th{"style"=>"font-weight: 500"}= @worker.entity.city
                  %th Provincia
                  %th{"style"=>"font-weight: 500"}= @worker.entity.province
                  %th Departamento
                  %th{"style"=>"font-weight: 500"}= @worker.entity.department
                %thead
                  %tr
                    %th{"style"=>"text-align:center;font-size: large",'colspan' => 6} Residencia Actual
                %tbody
                  %tr
                    %th Direccion
                    %th{'colspan' => 3,"style"=>"font-weight: 500"}= @worker.address
                    %th Pais
                    %th{"style"=>"font-weight: 500"}= @worker.pais
                  %th Distrito
                  %th{"style"=>"font-weight: 500"}= @worker.district
                  %th Provincia
                  %th{"style"=>"font-weight: 500"}= @worker.province
                  %th Departamento
                  %th{"style"=>"font-weight: 500"}= @worker.department
                %thead
                  %tr
                    %th{"style"=>"text-align:center;font-size: large",'colspan' => 6} Otros Datos
                %tbody
                  %th Discapacitado
                  %th{"style"=>"font-weight: 500"}= @worker.disabled
                  %th Sindicalizado
                  %th{"style"=>"font-weight: 500"}= @worker.unionized
                  %th{"style"=>"width: 300px"} Percibe rentas de 5ta exoneradas (Inc. e) Art. 19 de la LIR
                  %th{"style"=>"font-weight: 500"}= @worker.income_fifth_category
                  %tr
                    %th Jornada Laboral
                    %th{'colspan' => 3,"style"=>"font-weight: 500"}= @worker.address
                    %th Cantidad de Hijos
                    %th{"style"=>"font-weight: 500"}= @worker.numberofchilds.to_s
  %br
  %article.col-sm-12.col-md-12.col-lg-12
    #wid-id-0.jarviswidget.jarviswidget-color-greenDark{"data-widget-collapsed" => "false", "data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
      %header
        %span.widget-icon
          %i.fa.fa-table
        %h2 Estudios
      %div
        .jarviswidget-editbox
          / This area used as dropdown edit box
        .widget-body.no-padding
          %table.table.table-hover
            %thead
              %tr
                %th Nivel
                %th Escuela/Colegio
                %th Lugar
                %th Inicio
                %th Fin
            %tbody
              %tr
                %td Primaria
                %td
                  = @worker.primaryschool.to_s
                %td
                  = @worker.primarydistrict.to_s
                %td
                  = @worker.primarystartdate.to_s
                %td
                  = @worker.primaryenddate.to_s
              %tr
                %td Secundaria
                %td
                  = @worker.highschool.to_s
                %td
                  = @worker.highschooldistrict.to_s
                %td
                  = @worker.highschoolstartdate.to_s
                %td
                  = @worker.highschoolenddate.to_s
  -if @worker_afps.count>0
    %br

