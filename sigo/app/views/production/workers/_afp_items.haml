%tr(class="afp_item"){id: "tr" + @reg_n.to_s}
  %td.bank-id(style="display:none")
    = hidden_field_tag 'worker[worker_afps_attributes][' + @reg_n.to_s + '][afp_id]', @id_afp.to_i
  %td.col-2
    = @enterprise
  %td.col-md-1.afptype{:style => "width:5%"}
    %div
      = text_field_tag 'worker[worker_afps_attributes][' + @reg_n.to_s + '][afptype]', @afptype.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
  %td{:style => "width: 1%;"}
    %a{href: "javascript:delete_item('"+@reg_n.to_s+"')"}(class="btn") X