    %div
      %input#familiar-dayofbirth.string.optional.form-control{'name'=>'worker[worker_familiars_attributes][' + @reg_n.to_s + '][dayofbirth]', type: "date", value: @dayofbirth.to_s}
  %td.col-md-1.dni{:style => "width:5%"}
    %div
      = text_field_tag 'worker[worker_familiars_attributes][' + @reg_n.to_s + '][dni]', @dni.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
