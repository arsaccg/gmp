%tr(class="familiar_item"){id: "tr" + @reg_n.to_s}
  %td.paternal_surname{:style => "width:15%"}
    %div
      = text_field_tag 'worker[worker_familiars_attributes][' + @reg_n.to_s + '][paternal_surname]', @paternal_surname.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
  %td.maternal_surname{:style => "width:15%"}
    %div
      = text_field_tag 'worker[worker_familiars_attributes][' + @reg_n.to_s + '][maternal_surname]', @maternal_surname.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
  %td.names{:style => "width:25%"}
    %div
      = text_field_tag 'worker[worker_familiars_attributes][' + @reg_n.to_s + '][names]', @names.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
  %td.relationship{:style => "width:15%"}
    %div
      %select.col-sm-6.form-control#relationship{:name =>'worker[worker_familiars_attributes][' + @reg_n.to_s + '][relationship]', :required => true, title:'No puede dejar este campo vacio', 'style' => 'width:200px', class: 'relationship' }
        %option{:value => "0", :selected => 'selected'} Seleccione un parentesco
        %option{:value => "padre"} Padre
        %option{:value => "madre"} Madre
        %option{:value => "hijo"} Hijo(a)
        %option{:value => "abuelo"} Abuelo(a)
        %option{:value => "hermano"} Hermano(a)
        %option{:value => "esposo"} Esposo(a)
  %td.dayofbirth{:style => "width:15%"}
    %div
      %input#familiar-dayofbirth.string.optional.form-control{'name'=>'worker[worker_familiars_attributes][' + @reg_n.to_s + '][dayofbirth]', type: "date", value: @dayofbirth.to_s}
  %td.dni{:style => "width:10%"}
    %div
      = text_field_tag 'worker[worker_familiars_attributes][' + @reg_n.to_s + '][dni]', @dni.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
  %td{:style => "width: 5%;"}
    %a{href: "javascript:delete_item('"+@reg_n.to_s+"')"}(class="btn") X