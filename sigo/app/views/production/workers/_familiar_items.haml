    %div
      = text_field_tag 'worker[worker_familiars_attributes][' + @reg_n.to_s + '][names]', @names.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
  %td.col-md-1.relationship{:style => "width:5%"}
    %div
      = text_field_tag 'worker[worker_familiars_attributes][' + @reg_n.to_s + '][relationship]', @relationship.to_s , class: "form-control quantity", :required => true, title:'No puede dejar este campo vacio'
