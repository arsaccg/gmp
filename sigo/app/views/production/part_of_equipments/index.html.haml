#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-7
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Lista de Parte de Equipos
    - if flash[:notice] != nil
      .alert.alert-success.fade.in{"style" => "clear:both"}
        %button.close{"data-dismiss" => "alert"}
          ×
        %i.fa-fw.fa.fa-check
        %strong Éxito
        = flash[:notice]
    - if flash[:error] != nil
      .alert.alert-danger.fade.in
        %button.close{"data-dismiss" => "alert"}
          ×
        %i.fa-fw.fa.fa-times
        %strong Error!
        = flash[:error]
  .row
    - if @fuel_articles.first != nil && @working_group.present? && @worker.present?
      .col-sm-2
        %a.btn.btn-primary.btn-mini{:onclick => "javascript:load_url_ajax('#{new_production_part_of_equipment_path}', 'content', {company_id: '#{@company}'} , null, 'GET')"}
          Agregar Parte de Equipo
    - elsif @fuel_articles.first.blank? && @working_group.blank? && @worker.blank?
      .col-xs-12.col-sm-7.col-md-7.col-lg-12
        .alert.alert-block.alert-danger
          %a.close(data-dismiss="alert" href="#")
            ×
          %h4.alert-heading
            %i.fa.fa-lock
              No puedes crear una Parte de Equipos!
          %p
            Verifica si tienes, por lo menos, 1 Insumo de tipo Combustible (Cod.32), 1 Grupo de Trabajo y 1 Operador.
    - elsif @fuel_articles.first.blank? && @working_group.blank?
      .col-xs-12.col-sm-7.col-md-7.col-lg-12
