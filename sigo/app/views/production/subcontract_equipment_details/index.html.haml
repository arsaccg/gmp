#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-7
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Lista de Equipos
    - if flash[:notice] != nil
      .alert.alert-success.fade.in{"style" => "clear:both"}
        %button.close{"data-dismiss" => "alert"}
          ×
        %i.fa-fw.fa.fa-check
        %strong Éxito
        = flash[:notice]
    - if flash[:error] != nil
      .alert.alert-danger.fade.in
        %button.close{"data-dismiss" => "alert"}
          ×
        %i.fa-fw.fa.fa-times
        %strong Error!
        = flash[:error]
  .row
    .col-sm-2
      %a.btn.btn-primary.btn-mini{:onclick => "javascript:load_url_ajax('#{new_production_subcontract_equipment_detail_path}', 'content', {company_id: '#{@company}', subcontract: '#{@subcontract}'} , null, 'GET')"}
        Agregar Equipo
  %br
  .row
  #widget-grid
    .row
      %article.col-xs-12.col-sm-12.col-md-12.col-lg-12
        = render :partial => 'table'

  %button.btn.btn-sm.btn-primary.btn-prev#backlist{type: "button"}
    %i.fa.fa-arrow-left>
    Retornar al listado de Subcontratos de Equipos
:javascript

  $('#backlist').click(function(){
      load_url_ajax("#{production_subcontract_equipments_path}", 'content', {company_id: '#{@company}'}, null, 'GET');
  });

