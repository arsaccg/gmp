#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-eye
        Detalles de Subcontrato
  %header
    %br
    %div
      .widget-body
        %table.panel.panel-primary{ style: "height: 150px; width: 950px;margin: 0 auto" }
          %thead.panel-heading
            %tr
              %th{'colspan' => 4, "style"=>"text-align:center;font-size: large"}="SUBCONTRATO - "+@subcontract.entity.name.to_s

          %tbody{:style=>"font-size:small;"}
            %tr{"bgcolor"=>"#ECF3F8"}
              %th{"style"=>"color:#5f5f5f;text-align:center;"} Descripción:
              %th{'colspan' => 3, "style"=>"font-weight: normal;color:#5f5f5f;"}= @subcontract.contract_description.to_s
            %tr
              %th{"style"=>"color:#5f5f5f;text-align:center;"} Valorizaciones:
              %th{'colspan' => 3, "style"=>"font-weight: normal;color:#5f5f5f;"}= @subcontract.valorization.to_s
            %tr{"bgcolor"=>"#ECF3F8"}
              %th{"style"=>"color:#5f5f5f;text-align:center;"} Condiciones de Pago:
              %th{'colspan' => 3, "style"=>"font-weight: normal;color:#5f5f5f;"}
                -if @subcontract.terms_of_payment.to_s =="3D"
                  = "Crédito a 3 dias"
                -if @subcontract.terms_of_payment.to_s =="5D"
                  = "Crédito a 5 dias"
                -if @subcontract.terms_of_payment.to_s =="7D"
                  = "Crédito a 7 dias"
                -if @subcontract.terms_of_payment.to_s =="10D"
                  = "Crédito a 10 dias"
                -if @subcontract.terms_of_payment.to_s =="15D"
                  = "Crédito a 15 dias"
                -if @subcontract.terms_of_payment.to_s =="30D"
                  = "Crédito a 30 dias"
                -if @subcontract.terms_of_payment.to_s =="40D"
                  = "Crédito a 40 dias"
                -if @subcontract.terms_of_payment.to_s =="50D"
                  = "Crédito a 50 dias"
                -if @subcontract.terms_of_payment.to_s =="60D"
                  = "Crédito a 60 dias"                
            %tr
              %th{"style"=>"color:#5f5f5f;text-align:center;"} Monto Contratado:
              %th{'colspan' => 3, "style"=>"font-weight: normal;color:#5f5f5f;"}= number_to_currency(@subcontract.contract_amount.to_s, unit: 'S/. ', precision: 2)
            %tr{"bgcolor"=>"#3276B1"}
              %th{"style"=>"color:white;text-align:center;width: 15%"} Amortización Inicial (nro.)
              %th{"style"=>"color:white;text-align:center"} Amortización Inicial (%)
              %th{"style"=>"color:white;text-align:center"} Fondo de Garantía
              %th{"style"=>"color:white;text-align:center"} Detracción
            %th{"style"=>"color:#5f5f5f;text-align:center"}
              - if !@subcontract.initial_amortization_number.nil?
                = number_to_currency(@subcontract.initial_amortization_number, unit: 'S/. ', precision: 2)
              - else
                =""
            %th{"style"=>"color:#5f5f5f;text-align:center"}= @subcontract.initial_amortization_percent.to_s
            %th{"style"=>"color:#5f5f5f;text-align:center"}= number_to_currency(@subcontract.guarantee_fund.to_s, unit: 'S/. ', precision: 2)
            %th{"style"=>"color:#5f5f5f;text-align:center"}= number_to_currency(@subcontract.detraction.to_s, unit: 'S/. ', precision: 2)
        %br
          %h2.page-title.txt-color-blueDark{"style"=>"margin-left: 7%;font-weight: bold;margin-bottom: 5px;"} Equipos
          %table.panel.panel-primary.table-bordered{ style: "height: 90px; width: 950px;margin: 0 auto;" }
            %thead.panel-heading
              %tr{"bgcolor"=>"#3276B1","style"=>"height:40px;"}
                %th{"style"=>"color:white;text-align:center;width:40px;"}N°
                %th{"style"=>"color:white;text-align:center"}Equipo
                %th{"style"=>"color:white;text-align:center;padding-left:10px;padding-right:10px;"}Marca
                %th{"style"=>"color:white;text-align:center"}Modelo
                %th{"style"=>"color:white;text-align:center"}Año
                %th{"style"=>"color:white;text-align:center"}Precio sin IGV
                %th{"style"=>"color:white;text-align:center"}Horas Contratadas
                %th{"style"=>"color:white;text-align:center"}Estado
            %tbody
              - @subcontract.subcontract_equipment_details.each do |part|
                %tr{"style"=>"height:30px;"}
                  %th{"style"=>"font-weight:normal;text-align:center;vertical-align: middle;"}=part.id
                  %th{"style"=>"font-weight:normal;padding-left:10px;vertical-align: middle;"}
                    - Article.find_article_in_specific(part.article_id, @cost_center_id).each do |arti|
                      = part.code + ' ' + arti[1].to_s
                  %th{"style"=>"font-weight:normal;text-align:center;vertical-align: middle;"}=part.brand
                  %th{"style"=>"font-weight:normal;text-align:center;vertical-align: middle;"}=part.model
                  %th{"style"=>"font-weight:normal;text-align:center;vertical-align: middle;"}=part.year
                  %th{"style"=>"font-weight:normal;text-align:center;vertical-align: middle;"}=number_to_currency part.price_no_igv.to_f, unit: "S/.", precision: 2
                  %th{"style"=>"font-weight:normal;text-align:center;vertical-align: middle;"}=part.contracted_amount
                  %th{"style"=>"font-weight:normal;text-align:center;vertical-align: middle;"}
                    - if part.state=="active"
                      %span.label.label-success{"style"=>"background-color: #25CA25;color:white;text-align:center;width:100px;font-weight:bold;"} Activo
                    -else
                      %span.label.label-success{"style"=>"background-color: #B50010;color:white;text-align:center;width:100px;font-weight:bold;"} Inactivo
  %br
  %button.btn.btn-sm.btn-primary.btn-prev#backlist{type: "button"}
    %i.fa.fa-arrow-left>
    Retornar al listado de Subcontratos de Equipos
:javascript

  $('#backlist').click(function(){
      load_url_ajax("#{production_subcontract_equipments_path}", 'content', {company_id: '#{@company}'}, null, 'GET');
  });