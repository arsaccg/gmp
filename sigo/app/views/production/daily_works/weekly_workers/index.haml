#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Tareo de Obreros Semanal

  .row
    .well
      .input-group
        .col-sm-6
          %label.input{for: "working_group_id"}
            %select.form-control{:name =>"working_group_id"}
              %option{:value => ''} Sector - Jefe de Frente - Ejecutor - Maestro de Obra
              - @workingGroups.each do |working_group|
                %option{:value => "#{working_group.id}"}
                  = working_group.sector.name + ' - ' + Worker.find(working_group.front_chief_id).first_name + ' ' + Worker.find(working_group.front_chief_id).second_name + ' ' + Worker.find(working_group.front_chief_id).paternal_surname + ' ' + Worker.find(working_group.front_chief_id).maternal_surname + ' - ' + Entity.find(working_group.executor_id).name + ' - ' + Worker.find(working_group.master_builder_id).first_name + ' ' + Worker.find(working_group.master_builder_id).second_name + ' ' + Worker.find(working_group.master_builder_id).paternal_surname + ' ' + Worker.find(working_group.master_builder_id).maternal_surname
        .col-sm-2
          %label.input{for: "start_date"}
            %input.string.optional.form-control{:name => "start_date", :type => "date"}
        .col-sm-2
          %label.input{for: "end_date"}
            %input.string.optional.form-control{:name => "end_date", :type => "date"}
        .col-sm-2
          %button.btn.btn-primary.btn-default{:onclick => "javascript:load_items_delivery_order_ajax('#{search_weekly_work_production_daily_works_weekly_workers_path}', 'table-information-result', {company_id: '#{@company}'})"}
            %i.fa.fa-search
            Buscar
  %br
  .row
  #widget-grid
    .row
      %article.col-xs-12.col-sm-12.col-md-12.col-lg-12
        #table-information-result