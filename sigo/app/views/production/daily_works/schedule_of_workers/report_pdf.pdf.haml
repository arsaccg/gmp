%html
  %head
    %meta{charset: "utf-8"}
    = wicked_pdf_stylesheet_link_tag "bootstrap.min", media: "screen", rel: "stylesheet", type: "text/css"
  %body
    #main
      #content
        .col-md-12
          .row
            .col-md-12
              %h1{"style"=>"margin: 0"}
                = @company.name
          .row
            .col-md-12
              %h2{"style"=>"margin: 0;text-align:center"}
                = 'TAREO DE EMPLEADOS del ' + @inicio.to_date.strftime("%d/%m/%Y") + ' al ' + @fin.to_date.strftime("%d/%m/%Y")
            .col-md-12
              %br
              %p{"style"=>"margin: 0"}
                = 'Obra : ' + @cost_center.cost_center_detail.name.to_s rescue ''
              %p{"style"=>"margin: 0"}
                = 'Cliente : ' + @cost_center.cost_center_detail.entity.name.to_s rescue ''
              %p{"style"=>"margin: 0"}
                = 'UbicaciÃ³n : ' + @cost_center.company.address.to_s rescue ''
              %p{"style"=>"margin: 0"}
                = 'C.C. : ' + @cost_center.name.to_s rescue ''
          %br
          .row
            .col-md-12
              #wid-id-0.jarviswidget.jarviswidget-color-blueDark{"data-widget-editbutton" => "false", "data-widget-deletebutton" => "false"}
                %div
                  .widget-body
                    %table.table.table-bordered
                      %thead
                        %tr
                          %th{:style=>"font-size:9px;padding:7px"} Item
                          %th{:style=>"font-size:9px;padding:7px"} Codigo TOBI
                          %th{:style=>"font-size:9px;padding:7px"} Cargo
                          %th{:style=>"font-size:9px;padding:7px"} DNI
                          %th{:style=>"font-size:9px;padding:7px"} Nombre
                          - @dias_habiles.each do |date|
                            %th{:style=>"font-size:9px;padding:7px"}= date.to_time.strftime("%d/%m/%y")
                          %th{:style=>"font-size:9px;padding:7px"} Total Dias
                      %tbody
                        -@arraywo.each do |arr|
                          %tr
                            -index = 5
                            %td{:style=>"font-size:9px;padding:7px"}=arr[0]
                            %td{:style=>"font-size:9px;padding:7px"}=arr[1]
                            %td{:style=>"font-size:9px;padding:7px"}=arr[2]
                            %td{:style=>"font-size:9px;padding:7px"}=arr[3]
                            %td{:style=>"font-size:9px;padding:7px"}=arr[4]
                            - @dias_habiles.each do |date|
                              %td{:style=>"font-size:9px;padding:7px"}=arr[index]
                              -index +=1
                            %td{:style=>"font-size:9px;padding:7px"}=arr[index]
                        %tr
                          %td{:style=>"font-size:9px;padding:7px"}
                          %td{:style=>"font-size:9px;padding:7px"}
                          %td{:style=>"font-size:9px;padding:7px"}
                          %td{:style=>"font-size:9px;padding:7px"}
                          %td{:style=>"font-size:9px;padding:7px"} Total por dia:
                          - @totalperday.each do |totalperday|
                            %td{:style=>"font-size:9px;padding:7px"}=totalperday