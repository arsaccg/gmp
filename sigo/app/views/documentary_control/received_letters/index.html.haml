#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw
        Carta recibida
    - if flash[:notice] !=nil
      .alert.alert-success.fade.in{"style" => "clear:both"}
        %button.close{"data-dismiss" => "alert"} ×
        %i.fa-fw.fa.fa-check
        %strong Exito
        = flash[:notice]
    - if flash[:error] != nil
      .alert.alert-danger.fade.in
        %button.close{"data-dismiss" => "alert"} ×
        %i.fa-fw.fa.fa-check
        %strong Error!
        = flash[:error]
  .row
    .col-sm-4
      %a.btn.btn-primary.btn-mini{:onclick => "javascript:load_url_ajax('#{new_documentary_control_received_letter_path}', 'content', null, null, 'GET')"}
        Agregar Carta recibida
  %br
  .row
  #widget-grid
    .row
      %article.col-xs-12
        = render :partial => 'grid'