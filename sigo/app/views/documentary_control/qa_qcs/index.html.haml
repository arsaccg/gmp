#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw
        Qa/Qc
    - if flash[:notice] !=nil
      .alert.alert-success.fade.in{"style" => "clear:both"}
        %button.close{"data-dismiss" => "alert"} ×
        %i.fa-fw.fa.fa-check
        %strong Exito
        = flash[:notice]
    - if flash[:error] != nil
      .alert.alert-danger.fade.in
        %button.close{"data-dismiss" => "alert"} ×
        %i.fa-fw.fa.fa-check
        %strong Error!
        = flash[:error]
  .row

    -if @type_qq.count != 0
      .col-sm-4
        %a.btn.btn-primary.btn-mini{:onclick => "javascript:load_url_ajax('#{new_documentary_control_qa_qc_path}', 'content', {type: #{@type}}, null, 'GET')"}
          Agregar
      %br
    -else
      .alert.alert-danger.fade.in
        %i.fa-fw.fa.fa-check
        %strong{"style"=> "font-size: 12px"} Error! Asegurese de tener creado por lo menos un tipo      
    
  %br
  .row
  #widget-grid
    .row
      %article.col-xs-12
        = render :partial => 'grid'