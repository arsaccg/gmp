#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Tipo de Cartas Emitidas
  .widget-body
    = simple_form_for([:documentary_control, @typeOfIss], html: {class: 'form-horizontal smart-form', autocomplete: 'off' }) do |f|
      %fieldset
        .row
          %section.col.col-8
            %label.label Nombre
            %label.input{for: "name"}
              %i.icon-append.fa.fa-user
              = f.input :name, placeholder: "Nombre", input_html: { class: 'form-control' }, label: false
        .row
          %section.col.col-sm-12
            %label.label Prefijo
            %label.input{for: "preffix"}
              %i.icon-append.fa.fa-terminal
              = f.input :preffix, placeholder: "Prefijo", input_html: { class: 'form-control' }, label: false
      %footer
        %button.btn.btn-primary{type: "submit"}
          %i.fa.fa-save 
          Guardar

:javascript
  $(document).ready(function () {
    $("#type_of_article_code").focus();
    
    if($('form[id^="edit_"]').length > 0) {
      submit_validate($('form[id^="edit_"]'));
    }else{
      submit_validate($('#new_type_of_issued_letter'));
    }
  });
  
  function submit_validate(form){
    $(form['selector']).ajaxForm({
      beforeSubmit: function() {
        $(form['selector']).validate({
          // Rules for form validation
          rules : {
            'type_of_issued_letter[name]' : {
              required : true
            },
            'type_of_issued_letter[preffix]' : {
              required : true,
            }
          },

          // Messages for form validation
          messages : {
            'type_of_issued_letter[name]' : {
              required : 'Por favor, ingresar el Nombre'
            },
            'type_of_issued_letter[preffix]' : {
              required : 'Por favor, ingresar el prefijo para poder identificar.'
            }
          },

          // Do not change code below
          errorPlacement : function(error, element) {
            error.insertAfter(element.parent());
          }
        });
        // Remove all Help-inLine
        $(".help-inline").remove();
        // Client Valid
        return $(form['selector']).valid();
      },
      target: '#content',
      success: function (data){
        $(".help-inline").parent().addClass("state-error");
      },
      error: function(xhr, status, error) {
      }
    });
  }