#wid-id-5.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-custombutton" => "false", "data-widget-editbutton" => "false", "data-widget-fullscreenbutton" => "false", "data-widget-sortable" => "false", "data-widget-deletebutton" => "false"}
  %header
    %h2 Lista de Documentos Emitidos
  %div
    .jarviswidget-editbox
    .widget-body
      .tabs-left
        %ul.nav.nav-tabs.tabs-left
          - @type_issu.each do |type_issu|
            - if type_issu.id == 1
              %li.active
                %a{"data-toggle" => "tab", href: "#tab-#{type_issu.id}"}
                  %span.badge.bg-color-blue.txt-color-white
                    = type_issu.issued_letters.count
                  = type_issu.name
            - else
              %li
                %a{"data-toggle" => "tab", href: "#tab-#{type_issu.id}"}
                  %span.badge.bg-color-blue.txt-color-white
                    = type_issu.issued_letters.count
                  = type_issu.name
        .tab-content
          - @type_issu.each do |type_issu|
            - if type_issu.id == 1
              .tab-pane.active{:id => "tab-#{type_issu.id}"}
                .col-md-8
                  %table.table.table-condensed.table-bordered
                    %thead
                      %tr
                        %th Tipo
                        %th Nombre
                        %th Código-Año
                        %th Descripción
                        %th Documentos
                        %th Acciones
                    %tbody
                      - type_issu.issued_letters.order(:type_of_doc).each do |lawre|
                        %tr
                          %td
                            = lawre.type_of_doc.to_s
                          %td
                            = lawre.name.to_s
                          %td
                            =lawre.code.to_s + " - "+ lawre.year.to_s
                          %td
                            = lawre.description.to_s
                          %td
                            - if lawre.document.exists?
                              %a.btn.btn-info.btn-xs{:href =>"#{lawre.document.url}", :target => "_blank"}
                                %i.fa.fa-clipboard
                            -else
                              No hay ningun Archivo adjunto
                          %td
                            %a.btn.btn-warning.btn-xs{:onclick => "javascript:load_url_ajax('#{edit_documentary_control_issued_letter_path(lawre.id)}', 'content', null, null, 'GET')"}
                              Editar
                            %a.btn.btn-danger.btn-xs{:data => {:toggle => 'confirmation', :placement => 'left', :title => 'Esta seguro de eliminar el item ' + "#{lawre.name}?", :singleton => 'true', :popout => 'true', :onclick => "javascript:delete_to_url('#{documentary_control_issued_letter_path(lawre.id)}' + '?authenticity_token=#{form_authenticity_token}', 'content', '#{documentary_control_issued_letters_path}')"}}
                              Eliminar
            - else
              .tab-pane{:id => "tab-#{type_issu.id}"}
                .col-md-8
                  %table.table.table-condensed.table-bordered
                    %thead
                      %tr
                        %th Tipo
                        %th Nombre
                        %th Código-Año
                        %th Descripción
                        %th Documentos
                        %th Acciones
                    %tbody
                      - type_issu.issued_letters.order(:type_of_doc).each do |lawre|
                        %tr
                          %td
                            = lawre.type_of_doc.to_s
                          %td
                            = lawre.name.to_s
                          %td
                            =lawre.code.to_s + " - "+ lawre.year.to_s
                          %td
                            = lawre.description.to_s
                          %td
                            - if lawre.document.exists?
                              %a.btn.btn-info.btn-xs{:href =>"#{lawre.document.url}", :target => "_blank"}
                                %i.fa.fa-clipboard
                            -else
                              No hay ningun Archivo adjunto
                          %td
                            %a.btn.btn-warning.btn-xs{:onclick => "javascript:load_url_ajax('#{edit_documentary_control_issued_letter_path(lawre.id)}', 'content', null, null, 'GET')"}
                              Editar
                            %a.btn.btn-danger.btn-xs{:data => {:toggle => 'confirmation', :placement => 'left', :title => 'Esta seguro de eliminar el item ' + "#{lawre.name}?", :singleton => 'true', :popout => 'true', :onclick => "javascript:delete_to_url('#{documentary_control_issued_letter_path(lawre.id)}' + '?authenticity_token=#{form_authenticity_token}', 'content', '#{documentary_control_issued_letters_path}')"}}
                              Eliminar

