#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 Documentos Emitidas
  .widget-body
    = simple_form_for([:documentary_control, @issu], html: {class: 'form-horizontal smart-form', autocomplete: 'off' }) do |f|
      %input#last{"style"=>"display:none;"}
      %fieldset
        .row
          %section.col.col-10
            %label.control-label Tipo de Documento
            %br
            .input-group
              %select.col-sm-6.form-control#type{:name =>"issued_letter[type_of_doc]"}
                %option{:value => nil} Seleccione un tipo
                %option{:value => "Carta", :selected => @issu.type_of_doc == "Carta"} Carta
                %option{:value => "Solicitud", :selected => @issu.type_of_doc == "Solicitud"} Solicitud
                %option{:value => "Memorando", :selected => @issu.type_of_doc == "Memorando"} Memorando
                %option{:value => "Informe", :selected => @issu.type_of_doc == "Informe"} Informe
                %option{:value => "Otros", :selected => @issu.type_of_doc == "Otros"} Otros
              %span.input-group-addon
                %i.fa.fa-book
        .row
          %section.col.col-md-12
            %label.label Tipo
            %section.col.col-10
              -@type_issu.each do |tb|
                = f.radio_button :type_of_issued_letter_id, "#{tb.id}",  class: 'types'
                %label= tb.name
                %br
        .row
          -if @action == "edit"
            %section.col.col-md-6#year
              %label.label Año
              %label.input{for: "name"}
                %i.icon-append.fa.fa-calendar-o
                = f.input :year, placeholder: "Año", input_html: { class: 'form-control' }, label: false
          -else  
            %section.col.col-md-6#year{"style"=>"display:none"}
              %label.label Año
              %label.input{for: "name"}
                %i.icon-append.fa.fa-calendar-o
                = f.input :year, placeholder: "Año", input_html: { class: 'form-control' }, label: false

          -if @action == "edit"
            %section.col.col-md-6#code
              %label.label Código
              %label.input{for: "name"}
                %i.icon-append.fa.fa-superscript
                = f.input :code, placeholder: "Codigo", input_html: { class: 'form-control' }, label: false
          -else
            %section.col.col-md-6#code{"style"=>"display:none"}
              %label.label Código
              %label.input{for: "name"}
                %i.icon-append.fa.fa-superscript
                = f.input :code, placeholder: "Codigo", input_html: { class: 'form-control' }, label: false
        .row
          %section.col.col-md-8
            %label.label Nombre
            %label.input{for: "name"}
              %i.icon-append.fa.fa-user
              = f.input :name, placeholder: "Nombre", input_html: { class: 'form-control' }, label: false
          %section.col.col-md-4
            %label.label Fecha
            %label.input{for: "Fecha"}
              = f.input :date, as: :string, input_html: { class: 'form-control', :type => "date" }, label: false
        %br
        .row
          %section.col.col-md-12
            %label.label Descripción 
            %label.input
              = f.input :description, placeholder: "Descripción", input_html: { class: 'form-control' }, label: false, rows: 4

        .row
          %section.col.col-md-12
            %label.label Documento
            -if @action == nil
              = f.input :document, :input_html => { :class => 'btn btn-default' }, label: false, as: "file", required: true
            -else
              = f.input :document, :input_html => { :class => 'btn btn-default' }, label: false, as: "file"
            %p.help-block
              - if @action == 'edit' && @issu.document.exists?
                = 'Archivo subido: ' + File.basename(@issu.document.path, File.extname(@issu.document.path))
              - else
                Subir el archivo correspondiente

      %footer
        -if @action == "edit"
          %button.btn.btn-primary#submit{type: "submit", :onclick => "part_block();"}
            %i.fa.fa-save 
            Guardar
        -else
          %button.btn.btn-primary#submit{type: "submit", "style"=>"display:none;", :onclick => "part_block();"}
            %i.fa.fa-save 
            Guardar

:javascript
  $(document).ready(function () {
    $('.radio_buttons').attr("style", 'position: relative; left: 0;');
    if($('form[id^="edit_"]').length > 0) {
      submit_validate($('form[id^="edit_"]'));
    }else{
      submit_validate($('#new_issued_letter'));
    }

  });
  
  function submit_validate(form){
    $(form['selector']).ajaxForm({
      beforeSubmit: function() {
        $(form['selector']).validate({
          // Rules for form validation
          rules : {
            'issued_letter[name]' : {
              required : true
            },
            'issued_letter[description]' : {
              required : true,
            },
            'issued_letter[type_of_issued_letter_id]':{
              required: true
            },
            'issued_letter[year]' : {
              required : true,
              digits: true,
              minlength: 4,
              maxlength: 4
            },
            'issued_letter[code]':{
              required: true,
              digits: true,
              maxlength: 3
            }
          },

          // Messages for form validation
          messages : {
            'issued_letter[name]' : {
              required : "Por favor, ingrese el nombre del documento"
            },
            'issued_letter[description]' : {
              required : "Por favor, ingrese una descripción para el documento"
            },
            'issued_letter[type_of_issued_letter_id]':{
              required: "Seleccione un tipo"
            },
            'issued_letter[year]' : {
              required : "Por favor, ingrese el año",
              digits: "Solo se acepta dígitos",
              minlength: "Se necesitan 4 dígitos",
              maxlength: "Se necesitan 4 dígitos",
            },
            'issued_letter[code]':{
              required: "Seleccione un tipo",
              digits: "Solo se acepta dígitos",
              maxlength: "Solo son 3 dígitos",
            }
          },

          // Do not change code below
          errorPlacement : function(error, element) {
            error.insertAfter(element.parent());
            $('#modalLoadingLabelading').modal('hide');
            $('.modal-backdrop.fade.in').remove();
          }
        });
        // Remove all Help-inLine
        $(".help-inline").remove();
        $('#modalLoadingLabelading').modal('hide');
        $('.modal-backdrop.fade.in').remove();
        // Client Valid
        if( $(form['selector']).valid() ){
          $('#modalLoadingLabelading').modal();
        }
        // Client Valid
        return $(form['selector']).valid();
      },
      target: '#content',
      success: function (data){
        $(".help-inline").parent().addClass("state-error");
        $('#modalLoadingLabelading').modal('hide');
        $('.modal-backdrop.fade.in').remove();
      },
      error: function(xhr, status, error) {
        $('#modalLoadingLabelading').modal('hide');
        $('.modal-backdrop.fade.in').remove();
      }
    });
  }

  $('#issued_letter_year').change(function(){
    var year = $(this).val();
    var type = 0;
    $('input.types').each(function(){
      if(document.getElementById($(this).attr('id')).checked){
        type = $(this).val();
      }
    });
    if(!isNaN(year) && year.length == 4 && type!=0){
      var typedoc = $('#type').val();
      lastcode("#{last_code_documentary_control_issued_letters_path}", year, type, typedoc,"#{form_authenticity_token}", "0302");
      $('#code').attr("style","display:block");
      $('#message').val(" ");
    }else{
      $.smallBox({
        title : "Aviso",
        content : "<i class='fa fa-clock-o'></i> <i>El año solo son números y de 4 dígitos, asegurese de haber selecciona un tipo de carta</i>",
        color : "#C46A69",
        iconSmall : "fa fa-times fa-2x fadeInRight animated",
        timeout : 4000
      });
      $('#issued_letter_year').val('');
      $('#code').attr("style","display:none");
    }
  });

  function lastcode(url, year,  type, typedoc,form_token, default_value){
    $.ajax({
        type: "POST",
        url: url,
        async: false,
        data: { year: year, type:type, typedoc:typedoc, authenticity_token: form_token}
      }).done(function( data ) {
        $('#last').val(data.code);
      });
  }

  $('#issued_letter_code').change(function(){
    var codigo = $(this).val();
    var last = parseInt($('#last').val());
    if(!isNaN(codigo) && codigo.length < 4){
      var dif = codigo - last;
      if(dif==1){
        $('#submit').attr("style","display:block");
      }else{
        $.smallBox({
          title : "Aviso",
          content : "<i class='fa fa-clock-o'></i> <i>El último código insertado fue el "+$('#last').val()+", asegure de que se haya ingresado los documentos de manera correlativa</i>",
          color : "#C46A69",
          iconSmall : "fa fa-times fa-2x fadeInRight animated",
          timeout : 4000
        });
        $('#issued_letter_code').val('');
        $('#submit').attr("style","display:none");
      }
    }else{
      $.smallBox({
        title : "Aviso",
        content : "<i class='fa fa-clock-o'></i> <i>El código solo son números</i>",
        color : "#C46A69",
        iconSmall : "fa fa-times fa-2x fadeInRight animated",
        timeout : 4000
      });
      $('#issued_letter_code').val('');
    }
  });

  $('.types').change(function(){
    $('#issued_letter_year').val('');
    $('#code').attr("style","display:none");
    $("#last").val('');
  });

  $('#type').change(function(){
    if($(this).val()!=0){
      $('#issued_letter_year').val('');
      $('#year').attr("style","display:block");
      $('#code').attr("style","display:none");
      $('#issued_letter_code').val('');
      $("#last").val('');
    }else{
      $('#issued_letter_year').val('');
      $('#year').attr("style","display:none");
      $('#code').attr("style","display:none");
      $('#issued_letter_code').val('');
      $("#last").val('');
    }
  });
