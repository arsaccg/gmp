%button.btn.btn-sm.btn-primary.btn-prev#backlist{type: "button"}
  %i.fa.fa-arrow-left>
  Retornar al listado

:javascript

  $('#backlist').click(function(){
    load_url_ajax("#{documentary_control_photo_of_works_path}", 'content', null, null, 'GET');
  });
  // DO NOT REMOVE : GLOBAL FUNCTIONS!
  pageSetUp();
  // PAGE RELATED SCRIPTS
  // load bootstrap-progress bar script
  loadScript("#{ asset_path 'plugin/superbox/superbox.min.js', type: :javascript }", runSuperBox);
  function runSuperBox() {
    $('.superbox').SuperBox();
  }