:javascript
  $(document).ready(function(){
    var as=$('#paginate').children().find('a');
    console.log(as);
    as.each(function(){
      var home = "/home#";
      var hrefi = $(this).attr('href');
      var cad = home + hrefi;
      $(this).attr('href',cad);
    });
  });
  // DO NOT REMOVE : GLOBAL FUNCTIONS!
  pageSetUp();
  // PAGE RELATED SCRIPTS
  // load bootstrap-progress bar script
  loadScript("#{ asset_path 'plugin/superbox/superbox.min.js', type: :javascript }", runSuperBox);
  function runSuperBox() {
    $('.superbox').SuperBox();
  }

