#wid-id-0.jarviswidget.jarviswidget-color-darken{"data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-table
    %h2 Lista de Carpetas
  / widget div
  %div
    .widget-body.no-padding
      #dt_basic_wrapper.dataTables_wrapper.form-inline{:role => 'grid'}
        .dt-wrapper
          %table#dt_basic.table.table-striped.table-bordered.table-hover
            %thead
              %tr
                %th Nombre
                %th DescripciÃ³n
                %th Carpeta/Imagen
                %th Acciones
            %tbody
              - @folder.each do |folder|
                %tr
                  %td
                    = folder.name.to_s
                  %td
                    = folder.description.to_s
                  %td Carpeta
                  %td
                    %a.btn.btn-warning.btn-xs{:onclick => "javascript:load_url_ajax('#{edit_documentary_control_folder_path(folder.id)}', 'content', {fa_id:#{folder.folderfa_id.to_s}}, null, 'GET')"}
                      Editar
                    %a.btn.btn-info.btn-xs{:onclick => "javascript:load_url_ajax('#{documentary_control_folders_path}', 'content', {fa_id:#{folder.id.to_s}}, null, 'GET')"}
                      Ver archivos dentro
                    %a.btn.btn-danger.btn-xs{:data => {:toggle => 'confirmation', :placement => 'left', :title => 'Esta seguro de eliminar el item ' + "#{folder.name}?", :singleton => 'true', :popout => 'true', :onclick => "javascript:delete_to_url('#{documentary_control_folder_path(folder.id)}' + '?authenticity_token=#{form_authenticity_token}', 'content', '#{documentary_control_folders_path}')"}}
                      Eliminar
              -if @fa_id!=0
                - folder = Folder.find(@fa_id)
                - folder.photo_of_works.each do |photo|
                  %tr
                    %td
                      = photo.name.to_s
                    %td
                      = photo.description.to_s
                    %td
                      - if photo.photo.exists?
                        %a.btn.btn-info.btn-xs{:href =>"#{photo.photo.url}", :target => "_blank"}
                          %i.fa.fa-clipboard
                      -else
                        No hay ningun Archivo adjunto
                    %td
                      %a.btn.btn-warning.btn-xs{:onclick => "javascript:load_url_ajax('#{edit_documentary_control_photo_of_work_path(photo.id)}', 'content', {fa_id:#{@fa_id.to_s}}, null, 'GET')"}
                        Editar
                      %a.btn.btn-danger.btn-xs{:data => {:toggle => 'confirmation', :placement => 'left', :title => 'Esta seguro de eliminar el item ' + "#{photo.name}?", :singleton => 'true', :popout => 'true', :onclick => "javascript:delete_to_url('#{documentary_control_photo_of_work_path(photo.id)}' + '?authenticity_token=#{form_authenticity_token}', 'content', '#{documentary_control_folders_path}')"}}
                        Eliminar

  -if @fa_id!=0
    -id=Folder.find(@fa_id).folderfa_id.to_s
    -if id==""
      %input#fa{"style"=>"display:none", :value=>0}
    -else
      %input#fa{"style"=>"display:none", :value=>id}
    %br
    %button.btn.btn-sm.btn-primary.btn-prev#backlist{type: "button"}
      %i.fa.fa-arrow-left>
      Retornar al listado

:javascript

  $('#backlist').click(function(){
    load_url_ajax("#{documentary_control_folders_path}", 'content', {fa_id:$('#fa').val()}, null, 'GET');
  });                      
  // DO NOT REMOVE : GLOBAL FUNCTIONS!
  pageSetUp();

  $(document).ready(function () {
    $('[data-toggle="confirmation"]').confirmation();
  });

  // PAGE RELATED SCRIPTS

  loadDataTableScripts();
  function loadDataTableScripts() {

    loadScript("#{ asset_path 'plugin/datatables/jquery.dataTables-cust.min', type: :javascript }", dt_2);

    function dt_2() {
      loadScript("#{ asset_path 'plugin/datatables/ColReorder.min', type: :javascript }", dt_3);
    }

    function dt_3() {
      loadScript("#{ asset_path 'plugin/datatables/FixedColumns.min.js', type: :javascript }", dt_4);
    }

    function dt_4() {
      loadScript("#{ asset_path 'plugin/datatables/ColVis.min', type: :javascript }", dt_5);
    }

    function dt_5() {
      loadScript("#{ asset_path 'plugin/datatables/ZeroClipboard', type: :javascript }", dt_6);
    }

    function dt_6() {
      loadScript("#{ asset_path 'plugin/datatables/media/js/TableTools.min', type: :javascript }", dt_7);
    }

    function dt_7() {
      loadScript("#{ asset_path 'plugin/datatables/DT_bootstrap', type: :javascript }", runDataTables);
    }

  }

  function runDataTables() {

    /*
     * BASIC
     */
    $('#dt_basic').dataTable({
      "sPaginationType" : "bootstrap_full"
    });

    /* END BASIC */

    /* Add the events etc before DataTables hides a column */
    $("#dt_basic thead input").keyup(function() {
      oTable.fnFilter(this.value, oTable.oApi._fnVisibleToColumnIndex(oTable.fnSettings(), $("thead input").index(this)));
    });

    $("#dt_basic thead input").each(function(i) {
      this.initVal = this.value;
    });
    $("#datatable_fixed_column thead input").focus(function() {
      if (this.className == "search_init") {
        this.className = "";
        this.value = "";
      }
    });
    $("#dt_basic thead input").blur(function(i) {
      if (this.value == "") {
        this.className = "search_init";
        this.value = this.initVal;
      }
    });   
    

    var oTable = $('#datatable_fixed_column').dataTable({
      "sDom" : "<'dt-top-row'><'dt-wrapper't><'dt-row dt-bottom-row'<'row'<'col-sm-6'i><'col-sm-6 text-right'p>>",
      //"sDom" : "t<'row dt-wrapper'<'col-sm-6'i><'dt-row dt-bottom-row'<'row'<'col-sm-6'i><'col-sm-6 text-right'>>",
      "oLanguage" : {
        "sSearch" : "Search all columns:"
      },
      "bSortCellsTop" : true
    });   
    


    /*
     * COL ORDER
     */
    $('#datatable_col_reorder').dataTable({
      "sPaginationType" : "bootstrap",
      "sDom" : "R<'dt-top-row'Clf>r<'dt-wrapper't><'dt-row dt-bottom-row'<'row'<'col-sm-6'i><'col-sm-6 text-right'p>>",
      "fnInitComplete" : function(oSettings, json) {
        $('.ColVis_Button').addClass('btn btn-default btn-sm').html('Columns <i class="icon-arrow-down"></i>');
      }
    });
    
    /* END COL ORDER */

    /* TABLE TOOLS */
    $('#datatable_tabletools').dataTable({
      "sDom" : "<'dt-top-row'Tlf>r<'dt-wrapper't><'dt-row dt-bottom-row'<'row'<'col-sm-6'i><'col-sm-6 text-right'p>>",
      "oTableTools" : {
        "aButtons" : ["copy", "print", {
          "sExtends" : "collection",
          "sButtonText" : 'Save <span class="caret" />',
          "aButtons" : ["csv", "xls", "pdf"]
        }],
        "sSwfPath" : "#{ asset_path 'javascript/plugin/datatables/media/swf/copy_csv_xls_pdf.swf'}"
      },
      "fnInitComplete" : function(oSettings, json) {
        $(this).closest('#dt_table_tools_wrapper').find('.DTTT.btn-group').addClass('table_tools_group').children('a.btn').each(function() {
          $(this).addClass('btn-sm btn-default');
        });
      }
    });
    
    /* END TABLE TOOLS */

  }