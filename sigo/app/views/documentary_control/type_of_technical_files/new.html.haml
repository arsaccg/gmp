#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-fw 
        Nuevo
  #widget-grid
    .row
      %article.col-sm-12.col-md-12.col-lg-6
        = render :partial => 'form'

  %button.btn.btn-sm.btn-primary.btn-prev#backlist-tyarticles{type: "button"}
    %i.fa.fa-arrow-left>
    Retornar al listado de tipos

:javascript

  $('#backlist-tyarticles').click(function(){
    load_url_ajax("#{documentary_control_type_of_technical_files_path}", 'content', null, null, 'GET');
  });