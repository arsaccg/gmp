#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-12
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-eye

  #widget-grid
    .row
      %label.form-control= "Trabajador: "+ @entity.name.to_s+ " " +@entity.second_name.to_s + " "+@entity.paternal_surname.to_s+ " "+@entity.maternal_surname.to_s
    -if @pay==nil
      %strong No hay datos de pago ingresados para este trabajador
    -else

      .row
        %section.col.col-2
          %label.control-label Ingresos 
      .col-lg-12
        %table#summary-advance.table.table-striped.table-bordered.table-hover.has-tickbox.smart-form
          %thead
            %tr
              %th.col-2 Ingreso
              %th.col-5 Monto
          %tbody(id="ing_table")
            - @payroll_details.where("type_con LIKE 'Ingreso'").each do |con|
              %tr
                %td
                  = Concept.find(con.concept_id).name.to_s
                %td
                  = con.amount.to_s
      %br
      %br
      %br
      %br
      %br
      %br
      .row
        %section.col.col-2
          %label.control-label Descuentos 
      .col-lg-12
        %table#summary-advance.table.table-striped.table-bordered.table-hover.has-tickbox.smart-form
          %thead
            %tr
              %th.col-2 Descuento
              %th.col-5 Monto
          %tbody(id="desc_table")
            - @payroll_details.where("type_con LIKE 'Descuento'").each do |con|
              %tr
                %td
                  = Concept.find(con.concept_id).name.to_s
                %td
                  = con.amount.to_s
    %br
    %br
    %br
    %br
				 
        
  %button.btn.btn-sm.btn-primary.btn-prev#backlist-entity{type: "button"}
    %i.fa.fa-arrow-left>
    Retornar al listado

