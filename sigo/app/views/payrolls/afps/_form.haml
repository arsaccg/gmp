#wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
  %header
    %span.widget-icon
      %i.fa.fa-eye
    %h2 AFP
  .widget-body
    = simple_form_for([:payrolls, @afp], html: {class: 'form-horizontal smart-form', autocomplete: 'off' }) do |f|
      %fieldset
        .row
          %section.col.col-8
            %label.label Nombre de la CompaÃ±ia
            %label.input
              %i.icon-append.fa.fa-credit-card
              = f.input :enterprise, placeholder: "Nombre", input_html: { class: 'form-control' }, label: false
          %section.col.col-4
            %label.label Aporte F.P.
            %label.input
              = f.input :contribution_fp, placeholder: "%", input_html: { class: 'form-control' }, label: false
          %section.col.col-4
            %label.label Prima de Seguro
            %label.input
              = f.input :insurance_premium, placeholder: "%", input_html: { class: 'form-control' }, label: false
          %section.col.col-4
            %label.label Tope Por Seguro
            %label.input
              = f.input :top, placeholder: "S/.", input_html: { class: 'form-control' }, label: false
          %section.col.col-4
            %label.label C. Variable
            %label.input
              = f.input :c_variable, placeholder: "%", input_html: { class: 'form-control' }, label: false
          %section.col.col-4
            %label.label Mixta
            %label.input
              = f.input :mixed, placeholder: "Porcentaje", input_html: { class: 'form-control' }, label: false

     
      %footer
        %button.btn.btn-primary{type: "submit"}
          %i.fa.fa-save 
          Guardar

:javascript
  $(document).ready(function () {

    if($('form[id^="edit_"]').length > 0) {
      submit_validate($('form[id^="edit_"]'));
    }else{
      submit_validate($('#new_afp'));
    }

  });
  
  function submit_validate(form){    
    $(form['selector']).ajaxForm({
      beforeSubmit: function() {
        $(form['selector']).validate({
          // Rules for form validation
          rules : {
            'afp[enterprise]' : {
              required : true
            },
            'afp[contribution_fp]' : {
              required : true
            },
            'afp[insurance_premium]' : {
              required : true
            },
            'afp[top]' : {
              required : true
            },
            'afp[c_variable]' : {
              required : true
            },
            'afp[mixed]' : {
              required : true
            }
          },

          // Messages for form validation
          messages : {
            'afp[enterprise]' : {
              required : 'Por favor, ingresar el nombre de la empresa.'
            },
            'afp[contribution_fp]' : {
              required : 'Por favor, ingresar el aporte.'
            },
            'afp[insurance_premium]' : {
              required : 'Por favor, ingresar la prima de seguro.'
            },
            'afp[top]' : {
              required : 'Por favor, ingresar el tope de seguro.'
            },
            'afp[c_variable]' : {
              required : 'Por favor, ingresar el costo variable.'
            },
            'afp[mixed]' : {
              required : 'Por favor, ingresar el monto mixto.'
            }
          },

          // Do not change code below
          errorPlacement : function(error, element) {
            error.insertAfter(element.parent());
          }
        });
        // Remove all Help-inLine
        $(".help-inline").remove();
        // Client Valid
        return $(form['selector']).valid();
      },
      target: '#content',
      success: function (data){
        $(".help-inline").parent().addClass("state-error");
      },
      error: function(xhr, status, error) {
      }
    });
  }
