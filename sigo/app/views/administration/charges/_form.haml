#widget-grid
  .row
    %article.col-sm-12.col-md-12.col-lg-6
      #wid-id-0.jarviswidget{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
        %header
          %span.widget-icon
            %i.fa.fa-eye
          %h2 Valorizacion
        .widget-body
          =simple_form_for([:administration, @charge], html: {class: "form-horizontal smart-form", autocomplete: 'off'}) do |f|
            %fieldset
              .row.form-inline
                %section.col.col-10
                  %label.label Monto
                  %label.input{for: "amount"}
                    = f.input :amount, input_html: { class: 'form-control' }, label: false
              .row.form-inline
                %section.col.col-10
                  %label.label Fecha de Cobro
                  %label.input{for: "charge_date"}
                    = f.input :charge_date, input_html: { class: 'form-control' }, label: false, :as => :date 
              .row.form-inline
                %section.col.col-10
                  %label.label Monto Pagado
                  %label.input{for: "payment_amount"}
                    = f.input :payment_amount, input_html: { class: 'form-control' }, label: false
              .row.form-inline
                %section.col.col-10
                  %label.label Financiera Cliente
                  %label.input{for: "financial_agent_client"}
                    = f.input :financial_agent_client, input_html: { class: 'form-control' }, label: false
              .row.form-inline
                %section.col.col-10
                  %label.label Financiera Destino
                  %label.input{for: "financial_agent_destiny"}
                    = f.input :financial_agent_destiny, input_html: { class: 'form-control' }, label: false
              %input(name='invoice_id' type='hidden'){:value=>@charge.invoice_id}
              = f.input :invoice_id, :as => :hidden

            %footer
              %a(href="javascript:post_to_url('#{administration_charges_path}', 'new_charge', 'right-area')" class="btn btn-success")
                %i.fa.fa-save
                Guardar Valorizacion

%a.btn.btn-sm.btn-primary.btn-prev#backlist-companies{:href=>"javascript: load_url_ondiv('"+administration_charges_path().to_s+"?invoice_id="+@invoices.id.to_s+"' , 'right-area');"}
