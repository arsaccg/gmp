#content-inside
  .row
    .col-xs-12.col-sm-7.col-md-7.col-lg-4
      %h1.page-title.txt-color-blueDark
        %i.fa.fa-pencil-square-o.fa-eye
        Parte de Empleados
  %section#widget-grid
    .row
      %article.col-sm-12.col-md-12.col-lg-12
        #wid-id-2.jarviswidget.jarviswidget-color-greenDark{"data-widget-collapsed" => "false", "data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
          %header
            %span.widget-icon
              %i.fa.fa-table
            %h2 Parte Empleado
          %div
            .jarviswidget-editbox
              / This area used as dropdown edit box
            .widget-body.no-padding
              .alert.alert-info.no-margin.fade.in
                %button.close{"data-dismiss" => "alert"}
                  ×
                %i.fa-fw.fa.fa-info
                Detalle de los Insumos Asociados
              %table.table.table-hover
                %thead
                  %tr
                    %th Trabajador
                    %th Sector
                    %th Fase
                    %th Horas normales
                    %th Horas Extras 25%
                    %th Horas Extras 35%
                    %th Total de Horas
                %tbody
                  - @partworkerdetails.each do |partworkerdetail|
                    %tr
                      %td
                        = partworkerdetail.worker.entity.name.to_s + ' ' + partworkerdetail.worker.entity.second_name.to_s + ' ' + partworkerdetail.worker.entity.paternal_surname.to_s + ' ' + partworkerdetail.worker.entity.maternal_surname.to_s
                      %td
                        = partworkerdetail.sector.name.to_s
                      %td
                        = partworkerdetail.phase.code rescue 'No insertó fase' + ' - ' + partworkerdetail.phase.name rescue ''
                      %td
                        = partworkerdetail.assistance.to_s
                      %td
                        = partworkerdetail.he_25.to_f
                      %td
                        = partworkerdetail.he_35.to_f

%button.btn.btn-sm.btn-primary.btn-prev#backlist-purchase-order{type: "button"}
  %i.fa.fa-arrow-left>
  Retornar al listado de Parte de Personas

:javascript
  
  $('#backlist-purchase-order').click(function(){
    load_url_ajax("#{production_part_people_path}", 'content', {company_id: "#{@company}"}, null, 'GET');
  });