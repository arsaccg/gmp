                                  = working_group.name
                              - else
                                %option{:value => "#{working_group.id}"}
                                  = working_group.name
                            - else
                              %option{:value => "#{working_group.id}"}
                                = working_group.name
                    %td.costcenter
                      %div
                        %select.form-control{:name =>"part_worker[part_worker_details_attributes][#{worker.id.to_s}][cost_center_id]", :required => true, title:'No puede dejar este campo vacio', :style => 'width:100%;padding: 0;border: none;'}
