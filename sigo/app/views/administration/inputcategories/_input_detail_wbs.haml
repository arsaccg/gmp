%table(class="table table-bordered table-hover /*table-condensed*/ white-table" width="100%")
  %thead
    %th
      Codigo
    %th
      Nombre
    %th
      Unidad
    %th
      Presupuesto Venta
    %th
      Presupuesto Meta
  %tbody
    - @input_budget_item_sale.each do |key, item|
      %tr
        %td
          = item[1]
        %td
          = item[0]
        %td
          = item[2]
        %td(style="text-align: right;")
          = item[3] rescue "---"
        %td(style="text-align: right;")
          = number_to_currency(@input_budget_item_goal[key][3], :unit=>'S/. ') rescue "---"

